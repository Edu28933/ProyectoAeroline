@model ProyectoAeroline.Models.EquipajeModel

@{
    ViewData["Title"] = "Eliminar Equipaje";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="bi bi-trash-fill"></i> Eliminar Equipaje
            </h3>
            <a href="/Equipaje/Listar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light">
            <h5 class="text-center mb-4 text-danger fw-semibold">
                ¿Seguro que deseas eliminar este equipaje?
            </h5>

            <form asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdEquipaje" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">ID Equipaje</label>
                        <input class="form-control" value="@Model.IdEquipaje" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">ID Boleto</label>
                        <input class="form-control" value="@Model.IdBoleto" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Peso (kg)</label>
                        <input class="form-control" value="@Model.Peso.ToString("N2")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Dimensiones</label>
                        <input class="form-control" value="@Model.Dimensiones" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Características Especiales</label>
                        <input class="form-control" value="@Model.CaracteristicasEspeciales" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Monto</label>
                        <input class="form-control" value="@(Model.Monto?.ToString("N2") ?? "0.00")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Costo Extra</label>
                        <input class="form-control" value="@(Model.CostoExtra?.ToString("N2") ?? "0.00")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Estado</label>
                        <input class="form-control" value="@Model.Estado" readonly />
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger px-4 me-2">
                        <i class="bi bi-trash3-fill"></i> Eliminar definitivamente
                    </button>
                    <a href="/Equipaje/Listar" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

