@model ProyectoAeroline.Models.AeropuertosModel

@{
    ViewData["Title"] = "Modificar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-primary text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Modificar aeropuerto</h4>
        <a href="/Aeropuertos/Listar" class="btn btn-light btn-sm fw-bold">
            <i class="bi bi-arrow-left-circle"></i> Regresar
        </a>
    </div>

    <div class="card-body bg-light rounded-bottom-4">
        <form asp-action="Modificar" method="post" class="needs-validation" novalidate>
            <input type="hidden" asp-for="IdAeropuerto" />

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <!-- Combo Empleado -->
                <div class="col-md-6">
                    <label asp-for="IdEmpleado" class="form-label fw-bold">Empleado</label>
                    <select asp-for="IdEmpleado" class="form-select" asp-items="ViewBag.Empleados">
                        <option value="">-- Seleccione Empleado --</option>
                    </select>
                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                </div>

                <!-- Código IATA -->
                <div class="col-md-6">
                    <label asp-for="IATA" class="form-label fw-bold">Código IATA</label>
                    <input asp-for="IATA" class="form-control" id="txtIATA" readonly placeholder="Se actualizará automáticamente según el país" />
                    <small class="text-muted">Se actualiza automáticamente al cambiar el país</small>
                    <span asp-validation-for="IATA" class="text-danger"></span>
                </div>

                <!-- Nombre -->
                <div class="col-md-6">
                    <label asp-for="Nombre" class="form-label fw-bold">🏛️ Nombre del Aeropuerto</label>
                    <input asp-for="Nombre" class="form-control" id="txtNombre" readonly placeholder="Se actualizará automáticamente según la ciudad" />
                    <small class="text-muted">Se actualiza automáticamente al cambiar la ciudad</small>
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- País -->
                <div class="col-md-6">
                    <label asp-for="Pais" class="form-label fw-bold">País</label>
                    @Html.DropDownListFor(model => model.Pais,
                    new SelectList(ViewBag.Paises as List<string> ?? new List<string>(), Model.Pais),
                                        "-- Seleccione País --",
                                        new { @class = "form-select", id = "ddlPais" })
                    <span asp-validation-for="Pais" class="text-danger"></span>
                </div>

                <!-- Ciudad -->
                <div class="col-md-6">
                    <label asp-for="Ciudad" class="form-label fw-bold">Ciudad</label>
                    @Html.DropDownListFor(model => model.Ciudad,
                                        new SelectList(ViewBag.Ciudades as List<string> ?? new List<string>(), Model.Ciudad),
                                        "-- Seleccione Ciudad --",
                                        new { @class = "form-select", id = "ddlCiudad" })
                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                </div>

                <!-- Dirección -->
                <div class="col-md-6">
                    <label asp-for="Direccion" class="form-label fw-bold">📍 Dirección</label>
                    <input asp-for="Direccion" class="form-control" id="txtDireccion" readonly placeholder="Se actualizará automáticamente según país y ciudad" />
                    <small class="text-muted">Se actualiza automáticamente al cambiar el país o ciudad</small>
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <!-- Teléfono -->
                <div class="col-md-6">
                    <label asp-for="Telefono" class="form-label fw-bold">📞 Teléfono</label>
                    <input asp-for="Telefono" class="form-control" id="txtTelefono" type="number" readonly placeholder="Se actualizará automáticamente según el país" />
                    <small class="text-muted">Se actualiza automáticamente al cambiar el país</small>
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <!-- Estado -->
                <div class="col-md-6">
                    <label asp-for="Estado" class="form-label fw-bold">Estado</label>
                    @Html.DropDownListFor(model => model.Estado,
                                        new SelectList(ViewBag.Estados as List<string> ?? new List<string>(), Model.Estado),
                                        "-- Seleccione Estado --",
                                        new { @class = "form-select" })
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save"></i> Guardar cambios
                </button>
                <a href="/Aeropuertos/Listar" class="btn btn-outline-secondary ms-2 px-4">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#ddlPais').change(function () {
                var pais = $(this).val();
                
                // Limpiar campos dependientes
                $('#ddlCiudad').html('<option value="">-- Seleccione Ciudad --</option>');

                if (pais) {
                    // Obtener código IATA según el país
                    $.getJSON('@Url.Action("ObtenerCodigoIATA", "Aeropuertos")', { pais: pais }, function (data) {
                        if (data.iata) {
                            $('#txtIATA').val(data.iata);
                        }
                    });

                    // Obtener teléfono según el país
                    $.getJSON('@Url.Action("ObtenerTelefono", "Aeropuertos")', { pais: pais }, function (data) {
                        if (data.telefono) {
                            $('#txtTelefono').val(data.telefono);
                        }
                    });

                    // Obtener ciudades del país
                    $('#ddlCiudad').html('<option>-- Cargando ciudades --</option>');
                    $.getJSON('@Url.Action("ObtenerCiudades", "Aeropuertos")', { pais: pais }, function (data) {
                        var options = '<option value="">-- Seleccione Ciudad --</option>';
                        $.each(data, function (i, ciudad) {
                            options += '<option value="' + ciudad + '">' + ciudad + '</option>';
                        });
                        $('#ddlCiudad').html(options);
                    });
                } else {
                    $('#ddlCiudad').html('<option value="">-- Seleccione Ciudad --</option>');
                    $('#txtIATA').val('');
                    $('#txtNombre').val('');
                    $('#txtDireccion').val('');
                    $('#txtTelefono').val('');
                }
            });

            // Cuando se selecciona una ciudad, actualizar nombre y dirección
            $('#ddlCiudad').change(function () {
                var pais = $('#ddlPais').val();
                var ciudad = $(this).val();
                
                if (ciudad) {
                    // Obtener nombre del aeropuerto según la ciudad
                    $.getJSON('@Url.Action("ObtenerNombreAeropuerto", "Aeropuertos")', { ciudad: ciudad }, function (data) {
                        if (data.nombre) {
                            $('#txtNombre').val(data.nombre);
                        }
                    });
                } else {
                    $('#txtNombre').val('');
                }
                
                if (pais && ciudad) {
                    $.getJSON('@Url.Action("ObtenerDireccion", "Aeropuertos")', { pais: pais, ciudad: ciudad }, function (data) {
                        if (data.direccion) {
                            $('#txtDireccion').val(data.direccion);
                        }
                    });
                } else {
                    $('#txtDireccion').val('');
                }
            });
        });
    </script>

}
