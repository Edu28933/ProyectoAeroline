@model ProyectoAeroline.Models.AeropuertosModel
@{
    ViewData["Title"] = "Eliminar Aeropuerto";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="bi bi-person-x-fill"></i> Eliminar Aeropuerto
            </h3>
            <a href="/Aeropuertos/Listar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light">
            <h5 class="text-center mb-4 text-danger fw-semibold">
                ¿Seguro que deseas eliminar este aeropuerto?
            </h5>

            <form asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()

                <!-- Campo oculto -->
                <input type="hidden" asp-for="IdAeropuerto" />

                <div class="mb-3">
                    <label class="form-label">IdAeropuerto</label>
                    <input class="form-control" value="@Model.IdAeropuerto" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">IdEmpleado</label>
                    <input class="form-control" value="@Model.IdEmpleado" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">IATA</label>
                    <input class="form-control" value="@Model.IATA" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Nombre</label>
                    <input class="form-control" value="@Model.Nombre" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">País</label>
                    <input class="form-control" value="@Model.Pais" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Ciudad</label>
                    <input class="form-control" value="@Model.Ciudad" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Dirección</label>
                    <input class="form-control" value="@Model.Direccion" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Teléfono</label>
                    <input class="form-control" value="@Model.Telefono" readonly />
                </div>
                <div class="mb-3">
                    <label class="form-label">Estado</label>
                    <input class="form-control" value="@Model.Estado" readonly />
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger px-4 me-2">
                        <i class="bi bi-trash3-fill"></i> Eliminar definitivamente
                    </button>
                    <a href="/Aeropuertos/Listar" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
