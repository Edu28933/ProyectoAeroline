@model ProyectoAeroline.Models.AeropuertosModel

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-dark text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Registrar nuevo aeropuerto</h4>
        <a href="/Aeropuertos/Listar" class="btn btn-outline-light btn-sm">
            <i class="bi bi-arrow-left"></i> Regresar
        </a>
    </div>

    <div class="card-body bg-light rounded-bottom-4">
        <form asp-action="Guardar" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <input asp-for="IdEmpleado" class="form-control" placeholder="IdEmpleado" />
                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="IATA" class="form-control" placeholder="IATA" />
                    <span asp-validation-for="IATA" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="Pais" class="form-control" placeholder="Pais" />
                    <span asp-validation-for="Pais" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="Ciudad" class="form-control" placeholder="Ciudad" />
                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="Direccion" class="form-control" placeholder="Direccion" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="Telefono" class="form-control" placeholder="Telefono" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="Estado" class="form-control" placeholder="Estado" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a href="/Aeropuertos/Listar" class="btn btn-outline-secondary ms-2 px-4">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
