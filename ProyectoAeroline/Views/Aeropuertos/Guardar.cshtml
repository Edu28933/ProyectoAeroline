@model ProyectoAeroline.Models.AeropuertosModel

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Guardar</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Guardar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            @* <div class="form-group">
                <label asp-for="IdAeropuerto" class="control-label"></label>
                <input asp-for="IdAeropuerto" class="form-control" />
                <span asp-validation-for="IdAeropuerto" class="text-danger"></span>
            </div>*@

            <div class="mb-3">
                <input asp-for="IdEmpleado" class="form-control" placeholder="IdEmpleado" />
                <span asp-validation-for="IdEmpleado" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="IATA" class="form-control" placeholder="IATA" />
                <span asp-validation-for="IATA" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Pais" class="form-control" placeholder="Pais" />
                <span asp-validation-for="Pais" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Ciudad" class="form-control" placeholder="Ciudad" />
                <span asp-validation-for="Ciudad" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Direccion" class="form-control" placeholder="Direccion" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Telefono" class="form-control" placeholder="Telefono" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input asp-for="Estado" class="form-control" placeholder="Estado" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    Crear
                </button>

                <a href="/Aeropuertos/Listar" class="btn btn-outline-secondary">
                    Regresar
                </a>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
