@model ProyectoAeroline.Models.AeropuertosModel

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-dark text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Registrar nuevo aeropuerto</h4>
        <a href="/Aeropuertos/Listar" class="btn btn-outline-light btn-sm">
            <i class="bi bi-arrow-left"></i> Regresar
        </a>
    </div>

    <div class="card-body bg-light rounded-bottom-4">
        <form asp-action="Guardar" method="post" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <!-- Combo Empleado -->
                <div class="col-md-6">
                    <label asp-for="IdEmpleado" class="form-label fw-bold">Empleado</label>
                    <select asp-for="IdEmpleado" class="form-select" asp-items="ViewBag.Empleados">
                        <option value="">-- Seleccione Empleado --</option>
                    </select>
                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="IATA" class="form-label fw-bold">Código IATA</label>
                    <input asp-for="IATA" class="form-control" readonly />
                    <span asp-validation-for="IATA" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Pais" class="form-label fw-bold">País</label>
                    @Html.DropDownListFor(model => model.Pais,
                    new SelectList(ViewBag.Paises as List<string> ?? new List<string>(), Model.Pais),
                                        "-- Seleccione País --",
                                        new { @class = "form-select", id = "ddlPais" })
                    <span asp-validation-for="Pais" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Ciudad" class="form-label fw-bold">Ciudad</label>
                    @Html.DropDownListFor(model => model.Ciudad,
                                        new SelectList(ViewBag.Ciudades as List<string> ?? new List<string>(), Model.Ciudad),
                                        "-- Seleccione Ciudad --",
                                        new { @class = "form-select", id = "ddlCiudad" })
                    <span asp-validation-for="Ciudad" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Direccion" class="control-label"></label>
                    <input asp-for="Direccion" class="form-control" placeholder="Direccion" />
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" placeholder="Telefono" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="Estado" class="control-label"></label>
                    @Html.DropDownListFor(model => model.Estado,
                                        new SelectList(ViewBag.Estados as List<string> ?? new List<string>(), Model.Estado),
                                        "-- Seleccione Estado --",
                                        new { @class = "form-select" })
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a href="/Aeropuertos/Listar" class="btn btn-outline-secondary ms-2 px-4">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <script>
        $(document).ready(function() {
            $('#ddlPais').change(function () {
                var pais = $(this).val();
                $('#ddlCiudad').html('<option>-- Cargando ciudades --</option>');

                if (pais) {
                    $.getJSON('@Url.Action("ObtenerCiudades", "Aeropuertos")', { pais: pais }, function (data) {
                        var options = '<option value="">-- Seleccione Ciudad --</option>';
                        $.each(data, function (i, ciudad) {
                            options += '<option value="' + ciudad + '">' + ciudad + '</option>';
                        });
                        $('#ddlCiudad').html(options);
                    });
                } else {
                    $('#ddlCiudad').html('<option value="">-- Seleccione Ciudad --</option>');
                }
            });
        });
    </script>
}
