@model IEnumerable<ProyectoAeroline.Models.ServiciosModel>

@{
    ViewData["Title"] = "Listar Servicios";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center header-glow">
            <h3 class="mb-0">
                â­ <i class="bi bi-stars"></i> <strong>Lista de Servicios</strong>
            </h3>
            <a href="/Servicios/Guardar" class="btn btn-light btn-sm fw-bold fancy-btn">
                â• <i class="bi bi-plus-circle"></i> Agregar
            </a>
        </div>

        <div class="card-body bg-light">
            <table id="tablaServicios" class="table table-hover align-middle text-center w-100">
                <thead class="table-primary">
                    <tr>
                        <th>ğŸ†” ID</th>
                        <th>ğŸ« Boleto</th>
                        <th>ğŸ“… Fecha</th>
                        <th>ğŸ¯ Tipo de Servicio</th>
                        <th>ğŸ’µ Costo</th>
                        <th>ğŸ”¢ Cantidad</th>
                        <th>ğŸ’° Costo Total</th>
                        <th>âš™ï¸ Estado</th>
                        <th>ğŸª„ Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdServicio</td>
                            <td>@item.IdBoleto</td>
                            <td>@(item.Fecha?.ToString("dd/MM/yyyy") ?? "N/A")</td>
                            <td>@item.TipoServicio</td>
                            <td>Q @item.Costo.ToString("N2")</td>
                            <td>@item.Cantidad</td>
                            <td><strong>Q @(item.CostoTotal?.ToString("N2") ?? "0.00")</strong></td>
                            <td>
                                <span class="badge @(item.Estado == "Activo" ? "bg-success" : "bg-danger") px-3 py-2 rounded-pill shadow-sm">
                                    @(item.Estado == "Activo" ? "ğŸŸ¢ Activo" : "ğŸ”´ Inactivo")
                                </span>
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Modificar", "Servicios", new { CodigoServicio = item.IdServicio })"
