@model ProyectoAeroline.Models.UsuariosModel

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="mb-3">Guardar</h1>
<h4 class="text-muted">UsuariosModel</h4>
<hr />

<div class="row">
    <div class="col-md-5">
        <form asp-action="Guardar" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            @* IdUsuario (IDENTITY) normalmente no se captura al crear. 
               Si lo quisieras mostrar, descomenta este bloque. *@
            @*
            <div class="mb-3">
                <label asp-for="IdUsuario" class="form-label"></label>
                <input asp-for="IdUsuario" class="form-control" placeholder="IdUsuario" />
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            *@

            <div class="mb-3">
                <label asp-for="IdRol" class="form-label"></label>
                <input asp-for="IdRol" class="form-control" placeholder="Id del Rol (1..n)" />
                <span asp-validation-for="IdRol" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Nombre de usuario" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Contraseña" class="form-label"></label>
                <input asp-for="Contraseña" type="password" class="form-control" placeholder="Contraseña" />
                <span asp-validation-for="Contraseña" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="Estado" class="form-label"></label>
                <input asp-for="Estado" class="form-control" placeholder="Estado (Activo / Inactivo)" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    Crear
                </button>

                <a href="/Usuarios/Listar" class="btn btn-outline-secondary">
                    Regresar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
