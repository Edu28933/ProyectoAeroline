@model ProyectoAeroline.Models.UsuariosModel

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-dark text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Registrar nuevo usuario</h4>
        <a href="/Usuarios/Listar" class="btn btn-outline-light btn-sm">
            <i class="bi bi-arrow-left"></i> Regresar
        </a>
    </div>

    <div class="card-body p-4">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <div class="card-body bg-light rounded-bottom-4">
            <form asp-action="Guardar" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdRol" class="form-label fw-bold">Rol</label>
                        <input asp-for="IdRol" class="form-control" type="number" placeholder="ID del Rol (1-Admin, 2-Usuario, etc.)" />
                        <span asp-validation-for="IdRol" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label fw-bold">Nombre completo</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre del usuario" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Correo" class="form-label fw-bold">Correo electrónico</label>
                        <input asp-for="Correo" class="form-control" type="email" placeholder="correo@ejemplo.com" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Contraseña" class="form-label fw-bold">Contraseña</label>
                        <input asp-for="Contraseña" type="password" class="form-control" placeholder="Contraseña" required />
                        <span asp-validation-for="Contraseña" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label fw-bold">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a href="/Usuarios/Listar" class="btn btn-outline-secondary ms-2 px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
