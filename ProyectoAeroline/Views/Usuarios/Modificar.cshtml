@model ProyectoAeroline.Models.UsuariosModel

@{
    ViewData["Title"] = "Modificar Usuario";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center header-glow">
            <h3 class="mb-0">
                ✏️ <i class="bi bi-people-fill"></i> <strong>Modificar Usuario</strong>
            </h3>
            <a asp-action="Listar" class="btn btn-light btn-sm fw-bold fancy-btn">
                ⬅️ <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @ViewBag.Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <form asp-action="Modificar" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <input type="hidden" asp-for="IdUsuario" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdUsuario" class="form-label fw-bold">🆔 ID Usuario</label>
                        <input asp-for="IdUsuario" class="form-control rounded-3" readonly />
                        <span asp-validation-for="IdUsuario" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdRol" class="form-label fw-bold">🛡️ Rol</label>
                        <select asp-for="IdRol" class="form-select rounded-3" asp-items="ViewBag.Roles" required>
                            <option value="">-- Seleccione un rol --</option>
                        </select>
                        <span asp-validation-for="IdRol" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label fw-bold">👤 Nombre completo</label>
                        <input asp-for="Nombre" class="form-control rounded-3" placeholder="Nombre del usuario" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Correo" class="form-label fw-bold">📧 Correo electrónico</label>
                        <input asp-for="Correo" class="form-control rounded-3" type="email" placeholder="correo@ejemplo.com" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Contraseña" class="form-label fw-bold">🔒 Contraseña</label>
                        <input asp-for="Contraseña" type="text" class="form-control rounded-3" placeholder="Contraseña del usuario" minlength="6" required />
                        <small class="form-text text-muted">💡 Puede modificar la contraseña. Debe tener al menos 6 caracteres.</small>
                        <span asp-validation-for="Contraseña" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label fw-bold">⚙️ Estado</label>
                        <select asp-for="Estado" class="form-select rounded-3">
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group text-end mt-4">
                    <button type="submit" class="btn btn-success px-4 fancy-btn">
                        💾 <i class="bi bi-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Listar" class="btn btn-secondary px-4 fancy-btn ms-2">
                        ❌ <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <style>
        .bg-gradient {
            background: linear-gradient(135deg, #007bff, #00b4d8);
        }

        .header-glow {
            box-shadow: 0 0 25px rgba(0, 174, 255, 0.6);
        }

        .fancy-btn {
            border-radius: 25px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

            .fancy-btn:hover {
                transform: scale(1.1);
                box-shadow: 0 0 20px rgba(0, 174, 255, 0.6);
            }

        .form-control,
        .form-select {
            transition: 0.3s ease;
        }

            .form-control:focus,
            .form-select:focus {
                box-shadow: 0 0 10px rgba(0, 174, 255, 0.4);
                border-color: #00b4d8;
            }

        .card {
            transition: 0.4s ease;
        }

            .card:hover {
                transform: scale(1.02);
                box-shadow: 0 0 25px rgba(0, 123, 255, 0.3);
            }

        label {
            color: #0077b6;
        }
    </style>
}
