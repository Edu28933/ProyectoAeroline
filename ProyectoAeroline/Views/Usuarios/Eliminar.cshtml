@model ProyectoAeroline.Models.UsuariosModel
@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>
<h5>¿Seguro que deseas eliminar este usuario?</h5>
<hr />

<form asp-action="Eliminar" method="post">
    @Html.AntiForgeryToken()

    <!-- Campo oculto: ESTE ES CLAVE -->
    <input type="hidden" asp-for="IdUsuario" />

    <div class="mb-3">
        <label class="form-label">IdUsuario</label>
        <input class="form-control" value="@Model.IdUsuario" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">IdRol</label>
        <input class="form-control" value="@Model.IdRol" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Nombre</label>
        <input class="form-control" value="@Model.Nombre" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Contraseña</label>
        <input class="form-control" value="@Model.Contraseña" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Estado</label>
        <input class="form-control" value="@Model.Estado" readonly />
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="/Usuarios/Listar" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
