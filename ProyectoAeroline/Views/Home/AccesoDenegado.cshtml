@{
    ViewData["Title"] = "Acceso Denegado";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid d-flex align-items-center justify-content-center" style="min-height: 80vh;">
    <div class="row w-100">
        <div class="col-12 col-md-8 col-lg-6 mx-auto">
            <div class="card shadow-lg border-0 rounded-4 animate__animated animate__fadeInUp">
                <div class="card-body text-center p-5">
                    <!-- Icono de acceso denegado -->
                    <div class="mb-4">
                        <i class="bi bi-shield-x" style="font-size: 5rem; color: #dc3545;"></i>
                    </div>

                    <!-- Título -->
                    <h1 class="display-4 fw-bold text-danger mb-3">
                        Acceso Denegado
                    </h1>

                    <!-- Mensaje -->
                    <p class="lead text-muted mb-4">
                        No tienes permiso para acceder a esta dirección.
                    </p>

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-warning mb-4" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            @TempData["Error"]
                        </div>
                    }

                    <!-- Botones de acción -->
                    <div class="d-grid gap-3 d-md-flex justify-content-md-center mt-5">
                        <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg px-5">
                            <i class="bi bi-arrow-left me-2"></i>
                            Volver
                        </a>
                        <a href="/Account/Logout" class="btn btn-primary btn-lg px-5">
                            <i class="bi bi-box-arrow-right me-2"></i>
                            Ir al Login
                        </a>
                    </div>

                    <!-- Información adicional -->
                    <div class="mt-5 pt-4 border-top">
                        <p class="text-muted small mb-0">
                            Si crees que esto es un error, contacta al administrador del sistema.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .card {
        background: white;
        transition: transform 0.3s ease;
    }
    
    .card:hover {
        transform: translateY(-5px);
    }
</style>

