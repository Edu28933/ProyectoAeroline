@model ProyectoAeroline.Models.FacturacionModel

@{
    ViewData["Title"] = "Guardar Factura";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-dark text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-receipt-cutoff"></i> Registrar nueva factura</h4>
        <a href="/Facturacion/Listar" class="btn btn-outline-light btn-sm">
            <i class="bi bi-arrow-left"></i> Regresar
        </a>
    </div>

    <div class="card-body p-4">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <div class="card-body bg-light rounded-bottom-4">
            <form asp-action="Guardar" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdBoleto" class="form-label fw-bold">Boleto</label>
                        <select asp-for="IdBoleto" class="form-select" required>
                            <option value="">Seleccione un boleto</option>
                            @foreach (var boleto in ViewBag.Boletos as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@boleto.Value">@boleto.Text</option>
                            }
                        </select>
                        <span asp-validation-for="IdBoleto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FechaEmision" class="form-label fw-bold">Fecha de Emisión</label>
                        <input asp-for="FechaEmision" class="form-control" type="date" required />
                        <span asp-validation-for="FechaEmision" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HoraEmision" class="form-label fw-bold">Hora de Emisión</label>
                        <input asp-for="HoraEmision" class="form-control" type="time" />
                        <span asp-validation-for="HoraEmision" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                        <input asp-for="Descripcion" class="form-control" placeholder="Descripción de la factura" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TipoPago" class="form-label fw-bold">Tipo de Pago</label>
                        <select asp-for="TipoPago" class="form-select">
                            <option value="">Seleccione tipo de pago</option>
                            @foreach (var tipo in ViewBag.TiposPago as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@tipo.Value">@tipo.Text</option>
                            }
                        </select>
                        <span asp-validation-for="TipoPago" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Moneda" class="form-label fw-bold">Moneda</label>
                        <select asp-for="Moneda" class="form-select">
                            <option value="">Seleccione moneda</option>
                            @foreach (var moneda in ViewBag.Monedas as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@moneda.Value">@moneda.Text</option>
                            }
                        </select>
                        <span asp-validation-for="Moneda" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Monto" class="form-label fw-bold">Monto</label>
                        <input asp-for="Monto" class="form-control" type="number" step="0.01" placeholder="0.00" />
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Impuesto" class="form-label fw-bold">Impuesto</label>
                        <input asp-for="Impuesto" class="form-control" type="number" step="0.01" placeholder="0.00" />
                        <span asp-validation-for="Impuesto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MontoFactura" class="form-label fw-bold">Monto Factura</label>
                        <input asp-for="MontoFactura" class="form-control" type="number" step="0.01" placeholder="0.00" required />
                        <span asp-validation-for="MontoFactura" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MontoTotal" class="form-label fw-bold">Monto Total</label>
                        <input asp-for="MontoTotal" class="form-control" type="number" step="0.01" placeholder="Se calcula automáticamente" readonly />
                        <small class="text-muted">Monto Factura + Impuesto</small>
                        <span asp-validation-for="MontoTotal" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NumeroAutorizacion" class="form-label fw-bold">Número de Autorización</label>
                        <input asp-for="NumeroAutorizacion" class="form-control" type="number" placeholder="Número de autorización SAT" />
                        <span asp-validation-for="NumeroAutorizacion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label fw-bold">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            @foreach (var estado in ViewBag.Estados as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@estado.Value">@estado.Text</option>
                            }
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a href="/Facturacion/Listar" class="btn btn-outline-secondary ms-2 px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // Establecer fecha y hora actuales por defecto
        document.getElementById('FechaEmision').value = new Date().toISOString().split('T')[0];
        const ahora = new Date();
        const hora = ahora.getHours().toString().padStart(2, '0');
        const minutos = ahora.getMinutes().toString().padStart(2, '0');
        document.getElementById('HoraEmision').value = hora + ':' + minutos;

        // Calcular monto total automáticamente
        document.getElementById('MontoFactura').addEventListener('input', calcularTotal);
        document.getElementById('Impuesto').addEventListener('input', calcularTotal);

        function calcularTotal() {
            const montoFactura = parseFloat(document.getElementById('MontoFactura').value) || 0;
            const impuesto = parseFloat(document.getElementById('Impuesto').value) || 0;
            const total = montoFactura + impuesto;
            document.getElementById('MontoTotal').value = total.toFixed(2);
        }
    </script>
}

