@model ProyectoAeroline.Models.FacturacionModel

@{
    ViewData["Title"] = "Modificar Factura";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-primary text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Modificar factura</h4>
        <a href="/Facturacion/Listar" class="btn btn-light btn-sm fw-bold">
            <i class="bi bi-arrow-left-circle"></i> Regresar
        </a>
    </div>

    <div class="card-body p-4">
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <div class="card-body bg-light rounded-bottom-4">
            <form asp-action="Modificar" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdFactura" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdBoleto" class="form-label fw-bold">游늶 Boleto</label>
                        <select asp-for="IdBoleto" class="form-select rounded-3" id="IdBoleto" required onchange="cargarDatosBoleto()">
                            <option value="">-- Seleccione un boleto --</option>
                            @foreach (var boleto in ViewBag.Boletos as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@boleto.Value" selected="@(boleto.Value == Model.IdBoleto.ToString())">@boleto.Text</option>
                            }
                        </select>
                        <span asp-validation-for="IdBoleto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FechaEmision" class="form-label fw-bold">游늰 Fecha de Emisi칩n</label>
                        <input asp-for="FechaEmision" class="form-control rounded-3" type="date" value="@Model.FechaEmision.ToString("yyyy-MM-dd")" id="FechaEmision" readonly style="background-color: #e9ecef;" required />
                        <small class="text-muted">Se asigna autom치ticamente desde el boleto</small>
                        <span asp-validation-for="FechaEmision" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="HoraEmision" class="form-label fw-bold">游뎷 Hora de Emisi칩n</label>
                        <input asp-for="HoraEmision" class="form-control rounded-3" type="time" value="@(Model.HoraEmision?.ToString(@"hh\:mm"))" id="HoraEmision" readonly style="background-color: #e9ecef;" />
                        <small class="text-muted">Se asigna autom치ticamente desde el boleto</small>
                        <span asp-validation-for="HoraEmision" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Descripcion" class="form-label fw-bold">游닇 Descripci칩n</label>
                        <input asp-for="Descripcion" class="form-control rounded-3" placeholder="Descripci칩n de la factura" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="TipoPago" class="form-label fw-bold">游눱 Tipo de Pago</label>
                        <select asp-for="TipoPago" class="form-select rounded-3" required>
                            <option value="">-- Seleccione tipo de pago --</option>
                            @foreach (var tipo in ViewBag.TiposPago as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@tipo.Value" selected="@(tipo.Value == Model.TipoPago)">@tipo.Text</option>
                            }
                        </select>
                        <span asp-validation-for="TipoPago" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Moneda" class="form-label fw-bold">游눯 Moneda</label>
                        <select asp-for="Moneda" class="form-select rounded-3" id="Moneda" required>
                            <option value="">-- Seleccione moneda --</option>
                            @foreach (var moneda in ViewBag.Monedas as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@moneda.Value" selected="@(moneda.Value == Model.Moneda)">@moneda.Text</option>
                            }
                        </select>
                        <small class="text-muted">Se asigna autom치ticamente desde el boleto</small>
                        <span asp-validation-for="Moneda" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Monto" class="form-label fw-bold">游눳 Monto</label>
                        <input asp-for="Monto" class="form-control rounded-3" type="number" step="0.01" value="@Model.Monto" id="Monto" readonly style="background-color: #e9ecef;" />
                        <small class="text-muted">Se obtiene autom치ticamente del boleto</small>
                        <span asp-validation-for="Monto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Impuesto" class="form-label fw-bold">游늵 Impuesto</label>
                        <input asp-for="Impuesto" class="form-control rounded-3" type="number" step="0.01" value="@Model.Impuesto" id="Impuesto" readonly style="background-color: #e9ecef;" />
                        <small class="text-muted">Se obtiene autom치ticamente del boleto</small>
                        <span asp-validation-for="Impuesto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MontoFactura" class="form-label fw-bold">游 Monto Factura</label>
                        <input asp-for="MontoFactura" class="form-control rounded-3" type="number" step="0.01" value="@Model.MontoFactura" id="MontoFactura" readonly style="background-color: #e9ecef;" required />
                        <small class="text-muted">Se calcula autom치ticamente (Monto + Impuesto)</small>
                        <span asp-validation-for="MontoFactura" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MontoTotal" class="form-label fw-bold">游눺 Monto Total</label>
                        <input asp-for="MontoTotal" class="form-control rounded-3" type="number" step="0.01" value="@Model.MontoTotal" id="MontoTotal" readonly style="background-color: #e9ecef;" />
                        <small class="text-muted">Se calcula autom치ticamente</small>
                        <span asp-validation-for="MontoTotal" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="NumeroAutorizacion" class="form-label fw-bold">游댏 N칰mero de Autorizaci칩n</label>
                        <input asp-for="NumeroAutorizacion" class="form-control rounded-3" type="number" value="@Model.NumeroAutorizacion" id="NumeroAutorizacion" readonly style="background-color: #e9ecef;" />
                        <small class="text-muted">Generado autom치ticamente de forma correlativa</small>
                        <span asp-validation-for="NumeroAutorizacion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label fw-bold">丘뙖잺 Estado</label>
                        <select asp-for="Estado" class="form-select rounded-3" required>
                            <option value="">-- Seleccione estado --</option>
                            @foreach (var estado in ViewBag.Estados as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@estado.Value" selected="@(estado.Value == Model.Estado)">@estado.Text</option>
                            }
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4 rounded-3">
                        <i class="bi bi-save"></i> Guardar cambios
                    </button>
                    <a href="/Facturacion/Listar" class="btn btn-outline-secondary ms-2 px-4 rounded-3">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function cargarDatosBoleto() {
            const idBoleto = document.getElementById('IdBoleto').value;
            
            if (!idBoleto || idBoleto <= 0) {
                return;
            }

            // Llamar al API para obtener datos del boleto
            fetch(`/Facturacion/ObtenerDatosBoleto?idBoleto=${idBoleto}`)
                .then(response => response.json())
                .then(data => {
                    if (data.error) {
                        alert('Error: ' + data.error);
                        return;
                    }

                    // Llenar campos autom치ticamente
                    document.getElementById('FechaEmision').value = data.fechaEmision;
                    document.getElementById('HoraEmision').value = data.horaEmision;
                    document.getElementById('Monto').value = data.monto;
                    document.getElementById('Impuesto').value = data.impuesto;
                    document.getElementById('MontoFactura').value = data.montoFactura;
                    document.getElementById('MontoTotal').value = data.montoTotal;
                    
                    // Establecer moneda
                    const monedaSelect = document.getElementById('Moneda');
                    monedaSelect.value = data.moneda;
                })
                .catch(error => {
                    console.error('Error al cargar datos del boleto:', error);
                    alert('Error al cargar los datos del boleto. Por favor, intente nuevamente.');
                });
        }
    </script>
}
