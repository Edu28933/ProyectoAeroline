@model ProyectoAeroline.Models.FacturacionModel

@{
    ViewData["Title"] = "Eliminar Factura";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient-danger text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center header-glow-danger">
            <h3 class="mb-0">
                ğŸ—‘ï¸ <i class="bi bi-receipt-cutoff"></i> <strong>Eliminar Factura</strong>
            </h3>
            <a href="/Facturacion/Listar" class="btn btn-light btn-sm fw-bold fancy-btn-cancel">
                ğŸ”™ <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light text-center">
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <h5 class="text-danger fw-bold mb-4 animate__animated animate__pulse animate__infinite">
                âš ï¸ Â¿EstÃ¡s seguro de que deseas eliminar esta factura?
            </h5>

            <div class="table-responsive mb-4">
                <table class="table table-bordered shadow-sm align-middle">
                    <tr><th>ğŸ†” ID Factura</th><td>@Model.IdFactura</td></tr>
                    <tr><th>ğŸ« Boleto</th><td>@Model.IdBoleto</td></tr>
                    <tr><th>ğŸ“… Fecha EmisiÃ³n</th><td>@Model.FechaEmision.ToString("dd/MM/yyyy")</td></tr>
                    <tr><th>ğŸ• Hora</th><td>@(Model.HoraEmision?.ToString(@"hh\:mm") ?? "N/A")</td></tr>
                    <tr><th>ğŸ’µ Monto Total</th><td>@(Model.MontoTotal?.ToString("N2") ?? "0.00")</td></tr>
                    <tr>
                        <th>âš™ï¸ Estado</th>
                        <td>
                            @{
                                string badgeClass = "bg-secondary";
                                if (Model.Estado == "Pagada") badgeClass = "bg-success";
                                else if (Model.Estado == "Cancelada") badgeClass = "bg-danger";
                                else if (Model.Estado == "Pendiente") badgeClass = "bg-warning";
                                else if (Model.Estado == "En proceso") badgeClass = "bg-info";
                            }
                            <span class="badge @badgeClass px-3 py-2 rounded-pill shadow-sm">
                                @Model.Estado
                            </span>
                            @if (Model.Estado != "Cancelada")
                            {
                                <br><small class="text-danger mt-2 d-block">âš ï¸ Solo se pueden eliminar facturas con estado "Cancelada"</small>
                            }
                        </td>
                    </tr>
                </table>
            </div>

            <form id="formEliminarFactura" asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdFactura" />

                <button type="button" class="btn btn-danger px-4 me-2 fancy-delete" onclick="confirmarEliminacion()">
                    ğŸ’£ <i class="bi bi-trash3-fill"></i> Eliminar
                </button>
                <a href="/Facturacion/Listar" class="btn btn-outline-secondary px-4 fancy-cancel">
                    ğŸ™…â€â™‚ï¸ <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmarEliminacion() {
            // Solo se pueden eliminar facturas con estado "Cancelada"
            const estado = '@Model.Estado';
            
            // Validar estado
            if (estado !== 'Cancelada') {
                Swal.fire({
                    icon: 'error',
                    title: 'âš ï¸ No se puede eliminar',
                    html: `âŒ <strong>La factura tiene estado "${estado}"</strong><br><br>Solo se pueden eliminar facturas con estado "Cancelada". Por favor, cambie el estado a "Cancelada" antes de intentar eliminar.`,
                    confirmButtonColor: '#dc3545',
                    confirmButtonText: 'Entendido'
                });
                return;
            }

            Swal.fire({
                title: 'Â¿Eliminar Factura?',
                html: `ğŸ§¾ La factura <b>#@Model.IdFactura</b> serÃ¡ eliminada permanentemente.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'SÃ­, eliminar',
                cancelButtonText: 'Cancelar',
                backdrop: 'rgba(0,0,0,0.4)'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        icon: 'success',
                        title: 'âœ… Eliminada correctamente',
                        text: 'La factura ha sido eliminada del sistema.',
                        showConfirmButton: false,
                        timer: 1400
                    }).then(() => {
                        document.getElementById('formEliminarFactura').submit();
                    });
                }
            });
        }
    </script>

    <style>
        .bg-gradient-danger {
            background: linear-gradient(135deg, #dc3545, #ff6b6b);
        }

        .header-glow-danger {
            box-shadow: 0 0 25px rgba(255, 0, 0, 0.6);
        }

        .fancy-delete, .fancy-cancel {
            border-radius: 30px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

            .fancy-delete:hover {
                transform: scale(1.1);
                box-shadow: 0 0 20px rgba(220,53,69,0.6);
            }

            .fancy-cancel:hover {
                transform: scale(1.1);
                box-shadow: 0 0 20px rgba(108,117,125,0.5);
            }

        table th {
            background-color: #f8d7da;
            color: #721c24;
            width: 30%;
        }

        table td {
            background-color: #fff;
        }

        table tr:hover td {
            background-color: #ffe6e6;
            transition: 0.2s ease-in-out;
        }

        .card {
            transition: 0.4s ease;
        }

            .card:hover {
                transform: scale(1.02);
                box-shadow: 0 0 25px rgba(255,0,0,0.3);
            }
    </style>
}
