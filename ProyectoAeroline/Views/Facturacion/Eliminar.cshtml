@model ProyectoAeroline.Models.FacturacionModel

@{
    ViewData["Title"] = "Eliminar Factura";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="bi bi-trash-fill"></i> Eliminar Factura
            </h3>
            <a href="/Facturacion/Listar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light">
            <h5 class="text-center mb-4 text-danger fw-semibold">
                ¿Seguro que deseas eliminar esta factura?
            </h5>

            <form asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdFactura" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">ID Factura</label>
                        <input class="form-control" value="@Model.IdFactura" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">ID Boleto</label>
                        <input class="form-control" value="@Model.IdBoleto" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha de Emisión</label>
                        <input class="form-control" value="@Model.FechaEmision.ToString("dd/MM/yyyy")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Hora de Emisión</label>
                        <input class="form-control" value="@(Model.HoraEmision?.ToString(@"hh\:mm") ?? "N/A")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Descripción</label>
                        <input class="form-control" value="@Model.Descripcion" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Tipo de Pago</label>
                        <input class="form-control" value="@Model.TipoPago" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Moneda</label>
                        <input class="form-control" value="@Model.Moneda" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Monto</label>
                        <input class="form-control" value="@(Model.Monto?.ToString("N2") ?? "0.00")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Impuesto</label>
                        <input class="form-control" value="@(Model.Impuesto?.ToString("N2") ?? "0.00")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Monto Factura</label>
                        <input class="form-control" value="@Model.MontoFactura.ToString("N2")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Monto Total</label>
                        <input class="form-control" value="@(Model.MontoTotal?.ToString("N2") ?? "0.00")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Número de Autorización</label>
                        <input class="form-control" value="@Model.NumeroAutorizacion" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Estado</label>
                        <input class="form-control" value="@Model.Estado" readonly />
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger px-4 me-2">
                        <i class="bi bi-trash3-fill"></i> Eliminar definitivamente
                    </button>
                    <a href="/Facturacion/Listar" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

