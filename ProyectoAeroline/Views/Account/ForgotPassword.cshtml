@model ProyectoAeroline.Models.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Recuperar contraseña";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="container py-4" style="max-width: 520px;">
    <div class="card shadow border-0 rounded-4">
        <div class="card-body p-4">
            <h2 class="mb-3">¿Olvidó su contraseña?</h2>
            <p class="text-muted">Ingrese su correo y le enviaremos un enlace para restablecerla.</p>

            <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Correo" class="form-label"></label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Enviar enlace</button>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Login" asp-controller="Account" class="link-secondary">Volver al inicio de sesión</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
