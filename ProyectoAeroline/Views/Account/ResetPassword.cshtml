@model ProyectoAeroline.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "Restablecer contraseña";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<div class="container py-4" style="max-width: 520px;">
    <div class="card shadow border-0 rounded-4">
        <div class="card-body p-4">
            <h2 class="mb-3">Restablecer contraseña</h2>

            <form asp-action="ResetPassword" asp-controller="Account" method="post">
                @Html.AntiForgeryToken()
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- El token llega por querystring y lo pasamos hidden -->
                <input type="hidden" asp-for="Token" value="@Context.Request.Query["token"]" />

                <div class="mb-3">
                    <label asp-for="NuevaPassword" class="form-label"></label>
                    <input asp-for="NuevaPassword" class="form-control" />
                    <span asp-validation-for="NuevaPassword" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Confirmacion" class="form-label"></label>
                    <input asp-for="Confirmacion" class="form-control" />
                    <span asp-validation-for="Confirmacion" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-primary w-100">Cambiar contraseña</button>
            </form>

            <div class="text-center mt-3">
                <a asp-action="Login" asp-controller="Account" class="link-secondary">Volver al inicio de sesión</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
