@{
    ViewData["Title"] = "Confirmación de ingreso con Google";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    var ok = (bool?)ViewBag.Success == true;
    var msg = (string?)ViewBag.Message ?? (ok ? "Tu cuenta ha sido creada correctamente." : "No fue posible crear tu cuenta.");
    var redirectUrl = (string?)ViewBag.RedirectUrl ?? "/Index";
}

<div class="container py-4" style="max-width: 520px;">
    <div class="card shadow border-0 rounded-4">
        <div class="card-body p-4 text-center">
            @if (ok)
            {
                <div class="mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#28a745" class="bi bi-check-circle" viewBox="0 0 16 16" style="margin-bottom: 16px;">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06l2.5 2.5a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                    </svg>
                </div>
            }
            else
            {
                <div class="mb-3">
                    <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#dc3545" class="bi bi-x-circle" viewBox="0 0 16 16" style="margin-bottom: 16px;">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                </div>
            }
            
            <h2 class="mb-3">@ViewData["Title"]</h2>
            <p class="lead @(ok ? "text-success" : "text-danger")">@msg</p>
            
            @if (ok)
            {
                <p class="text-muted mb-4">Serás redirigido automáticamente al sistema en unos segundos...</p>
                <a href="@redirectUrl" class="btn btn-primary mt-2">Ir al sistema ahora</a>
                
                <script>
                    setTimeout(function() {
                        window.location.href = '@redirectUrl';
                    }, 3000);
                </script>
            }
            else
            {
                <a asp-action="Login" asp-controller="Account" class="btn btn-primary mt-2">Intentar nuevamente</a>
            }
        </div>
    </div>
</div>

