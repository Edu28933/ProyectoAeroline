@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmarEliminacion() {
            // Estados que no permiten eliminaciÃ³n
            const estadosProhibidos = ['Activo'];
            const estado = '@Model.Estado';
            
            // Validar estado
            if (estadosProhibidos.includes(estado)) {
                Swal.fire({
                    icon: 'error',
                    title: 'âš ï¸ No se puede eliminar',
                    html: `âŒ <strong>El permiso tiene estado "${estado}"</strong><br><br>Por favor, cambie el estado a "Inactivo" antes de intentar eliminar.`,
                    confirmButtonColor: '#dc3545',
                    confirmButtonText: 'Entendido'
                });
                return;
            }

            Swal.fire({
                title: 'Â¿Eliminar Permiso?',
                html: `ğŸ” El permiso para <b>@(Model.NombreRol ?? $"Rol {Model.IdRol}")</b> en <b>@(Model.NombrePantalla ?? $"Pantalla {Model.IdPantalla}")</b> serÃ¡ eliminado permanentemente.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'SÃ­, eliminar',
                cancelButtonText: 'Cancelar',
                backdrop: 'rgba(0,0,0,0.4)'
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        icon: 'success',
                        title: 'âœ… Eliminado correctamente',
                        text: 'El permiso ha sido eliminado del sistema.',
                        showConfirmButton: false,
                        timer: 1400
                    }).then(() => {
                        document.getElementById('formEliminarPermiso').submit();
                    });
                }
            });
        }
    </script>

    <style>
