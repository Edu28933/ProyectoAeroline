@model IEnumerable<ProyectoAeroline.Models.RolPantallaOpcionModel>

@{
    ViewData["Title"] = "Listar Permisos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-key-fill"></i> Lista de Permisos (Rol-Pantalla-Opción)</h3>
            <a href="/RolPantallaOpcion/Guardar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-plus-circle"></i> Agregar
            </a>
        </div>

        <div class="card-body bg-light">
            <!-- Barra de búsqueda -->
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" id="buscarInputPermisos" class="form-control" placeholder="Buscar por rol, pantalla, ID o estado..." />
                    <button class="btn btn-primary" type="button" id="btnBuscarPermisos">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <button class="btn btn-outline-secondary" type="button" id="btnLimpiarPermisos">
                        <i class="bi bi-x-circle"></i> Limpiar
                    </button>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <table id="tablaRolPantallaOpcion" class="table table-hover align-middle text-center w-100">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Rol</th>
                        <th>Pantalla</th>
                        <th>Ver</th>
                        <th>Crear</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.IdRolPantallaOpcion</td>
                                <td>
                                    <span class="badge bg-info">@(item.NombreRol ?? $"Rol {item.IdRol}")</span>
                                </td>
                                <td>@(item.NombrePantalla ?? $"Pantalla {item.IdPantalla}")</td>
                                <td>
                                    @if (item.Ver)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> No</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Crear)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> No</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Editar)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> No</span>
                                    }
                                </td>
                                <td>
                                    @if (item.Eliminar)
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle"></i> Sí</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary"><i class="bi bi-x-circle"></i> No</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @(item.Estado == "Activo" ? "bg-success" : "bg-danger")">
                                        @item.Estado
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("Modificar", "RolPantallaOpcion", new { CodigoRolPantallaOpcion = item.IdRolPantallaOpcion })"
                                           class="btn btn-outline-secondary btn-sm" title="Modificar">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>
                                        <a href="@Url.Action("Eliminar", "RolPantallaOpcion", new { CodigoRolPantallaOpcion = item.IdRolPantallaOpcion })"
                                           class="btn btn-outline-danger btn-sm"
                                           title="Eliminar"
                                           onclick="return confirm('¿Seguro que deseas eliminar este permiso?');">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center text-muted">No hay permisos registrados</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            console.log('Inicializando DataTable para Permisos...');
            
            // Inicializar DataTable
            var table = $('#tablaRolPantallaOpcion').DataTable({
                language: { url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' },
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                responsive: true,
                ordering: true,
                columnDefs: [
                    { orderable: false, targets: [8] } // acciones no ordenables
                ]
            });

            console.log('DataTable inicializado:', table);

            // Funcionalidad de búsqueda - Botón Buscar
            $('#btnBuscarPermisos').off('click').on('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                var searchValue = $('#buscarInputPermisos').val().trim();
                console.log('Buscando:', searchValue);
                table.search(searchValue).draw();
                console.log('Búsqueda ejecutada');
            });

            // Funcionalidad de búsqueda - Botón Limpiar
            $('#btnLimpiarPermisos').off('click').on('click', function (e) {
                e.preventDefault();
                e.stopPropagation();
                $('#buscarInputPermisos').val('');
                table.search('').draw();
                console.log('Búsqueda limpiada');
            });

            // Búsqueda al presionar Enter
            $('#buscarInputPermisos').off('keyup').on('keyup', function (e) {
                if (e.key === 'Enter' || e.keyCode === 13) {
                    e.preventDefault();
                    var searchValue = $(this).val().trim();
                    console.log('Buscando con Enter:', searchValue);
                    table.search(searchValue).draw();
                }
            });

            console.log('Eventos de búsqueda registrados');
        });
    </script>
}
