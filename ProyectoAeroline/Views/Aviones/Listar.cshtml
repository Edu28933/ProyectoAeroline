@model IEnumerable<ProyectoAeroline.Models.AvionesModel>

@{
    ViewData["Title"] = "Listar Aviones";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-airplane"></i> Lista de Aviones</h3>
            <a href="/Aviones/Guardar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-plus-circle"></i> Agregar
            </a>
        </div>

        <div class="card-body bg-light">
            <table id="tablaAviones" class="table table-hover align-middle text-center w-100">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Aerolínea</th>
                        <th>Placa</th>
                        <th>Modelo</th>
                        <th>Tipo</th>
                        <th>Capacidad</th>
                        <th>Último Mantenimiento</th>
                        <th>Rango (Km)</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdAvion</td>
                            <td>@item.IdAerolinea</td>
                            <td>@item.Placa</td>
                            <td>@item.Modelo</td>
                            <td>@item.Tipo</td>
                            <td>@item.Capacidad</td>
                            <td>@item.FechaUltimoMantenimiento.ToString("dd/MM/yyyy")</td>
                            <td>@item.RangoKm</td>
                            <td>
                                <span class="badge @(item.Estado == "Activo" ? "bg-success" : "bg-danger")">
                                    @item.Estado
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Modificar", "Aviones", new { CodigoAvion = item.IdAvion })"
                                       class="btn btn-outline-secondary btn-sm">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="@Url.Action("Eliminar", "Aviones", new { CodigoAvion = item.IdAvion })"
                                       class="btn btn-outline-danger btn-sm"
                                       onclick="return confirm('¿Seguro que deseas eliminar este avión?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaAviones').DataTable({
                language: { url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' },
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                responsive: true,
                ordering: true,
                columnDefs: [
                    { orderable: false, targets: [9] } // columna de Acciones no ordenable
                ]
            });
        });
    </script>
}
