@model ProyectoAeroline.Models.AvionesModel

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-dark text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Registrar nuevo avión</h4>
        <a href="/Aviones/Listar" class="btn btn-outline-light btn-sm">
            <i class="bi bi-arrow-left"></i> Regresar
        </a>
    </div>

    <div class="card-body bg-light rounded-bottom-4">
        <form asp-action="Guardar" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <input asp-for="IdAerolinea" class="form-control" placeholder="IdAerolinea" />
                    <span asp-validation-for="IdAerolinea" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="Placa" class="form-control" placeholder="Placa" />
                    <span asp-validation-for="Placa" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="Modelo" class="form-control" placeholder="Modelo" />
                    <span asp-validation-for="Modelo" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="Tipo" class="form-control" placeholder="Tipo" />
                    <span asp-validation-for="Tipo" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="Capacidad" class="form-control" placeholder="Capacidad" />
                    <span asp-validation-for="Capacidad" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="FechaUltimoMantenimiento" class="form-label fw-bold">Fecha último mantenimiento</label>
                    <input asp-for="FechaUltimoMantenimiento" type="date" class="form-control" />
                    <span asp-validation-for="FechaUltimoMantenimiento" class="text-danger"></span>
                </div>


                <div class="col-md-6">
                    <input asp-for="RangoKm" class="form-control" placeholder="RangoKm" />
                    <span asp-validation-for="RangoKm" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <input asp-for="Estado" class="form-control" placeholder="Estado" />
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a href="/Aviones/Listar" class="btn btn-outline-secondary ms-2 px-4">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
