@model ProyectoAeroline.Models.AvionesModel

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-dark text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Registrar nuevo avión</h4>
        <a href="/Aviones/Listar" class="btn btn-outline-light btn-sm">
            <i class="bi bi-arrow-left"></i> Regresar
        </a>
    </div>

    <div class="card-body bg-light rounded-bottom-4">
        <form asp-action="Guardar" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="row g-3">

                <div class="col-md-6">
                    <label asp-for="IdAerolinea" class="form-label fw-bold">Aerolínea</label>
                    <select asp-for="IdAerolinea" class="form-select" asp-items="ViewBag.Aerolineas">
                        <option value="">-- Seleccione Aerolínea --</option>
                    </select>
                    <span asp-validation-for="IdAerolinea" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Placa</label>
                    <input asp-for="Placa" class="form-control" readonly />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Modelo</label>
                    <select asp-for="Modelo" class="form-select" asp-items="ViewBag.Modelos" id="modeloSelect"></select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Tipo</label>
                    <select asp-for="Tipo" class="form-select" asp-items="ViewBag.Tipos"></select>
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Capacidad</label>
                    <select asp-for="Capacidad" class="form-select" asp-items="ViewBag.Capacidades"></select>
                </div>

                <div class="col-md-6">
                    <label asp-for="FechaUltimoMantenimiento" class="form-label fw-bold">Fecha último mantenimiento</label>
                    <input asp-for="FechaUltimoMantenimiento" type="date" class="form-control" />
                    <span asp-validation-for="FechaUltimoMantenimiento" class="text-danger"></span>
                </div>


                <div class="col-md-6">
                    <label class="form-label fw-bold">Rango (Km)</label>
                    <input asp-for="RangoKm" class="form-control" id="rangoKm" />
                </div>

                <div class="col-md-6">
                    <label class="form-label fw-bold">Estado</label>
                    <select asp-for="Estado" class="form-select" asp-items="ViewBag.Estados"></select>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-success px-4">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a href="/Aviones/Listar" class="btn btn-outline-secondary ms-2 px-4">
                    <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        const rangosPorModelo = {
            "Boeing 737": 5600,
            "Airbus A320": 6100,
            "Cessna 172": 1200,
            "Embraer E190": 4500
        };

        document.getElementById("modeloSelect").addEventListener("change", function () {
            const modelo = this.value;
            const rangoInput = document.getElementById("rangoKm");
            if (rangosPorModelo[modelo]) {
                rangoInput.value = rangosPorModelo[modelo];
            }
        });
    </script>
}
