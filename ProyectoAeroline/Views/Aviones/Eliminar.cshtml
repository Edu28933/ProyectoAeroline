@model ProyectoAeroline.Models.AvionesModel

@{
    ViewData["Title"] = "Eliminar Avión";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="bi bi-person-x-fill"></i> Eliminar Avion
            </h3>
            <a href="/Aviones/Listar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light">
            <h5 class="text-center mb-4 text-danger fw-semibold">
                ¿Seguro que deseas eliminar este avion?
            </h5>

<form asp-action="Eliminar" method="post">
    @Html.AntiForgeryToken()

    <!-- Campo oculto -->
    <input type="hidden" asp-for="IdAvion" />

    <div class="mb-3">
        <label class="form-label">IdAvion</label>
        <input class="form-control" value="@Model.IdAvion" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">IdAerolinea</label>
        <input class="form-control" value="@Model.IdAerolinea" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Placa</label>
        <input class="form-control" value="@Model.Placa" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Modelo</label>
        <input class="form-control" value="@Model.Modelo" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <input class="form-control" value="@Model.Tipo" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Capacidad</label>
        <input class="form-control" value="@Model.Capacidad" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Fecha Último Mantenimiento</label>
        <input class="form-control" value="@Model.FechaUltimoMantenimiento" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Rango (Km)</label>
        <input class="form-control" value="@Model.RangoKm" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Estado</label>
        <input class="form-control" value="@Model.Estado" readonly />
    </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger px-4 me-2">
                        <i class="bi bi-trash3-fill"></i> Eliminar definitivamente
                    </button>
                    <a href="/Aviones/Listar" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>

</form>
        </div>
    </div>
</div>
