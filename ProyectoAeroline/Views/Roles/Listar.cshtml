@model IEnumerable<ProyectoAeroline.Models.RolesModel>

@{
    ViewData["Title"] = "Listar Roles";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-shield-check"></i> Lista de Roles</h3>
            <a href="/Roles/Guardar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-plus-circle"></i> Agregar
            </a>
        </div>

        <div class="card-body bg-light">
            <!-- Barra de búsqueda -->
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" id="buscarInput" class="form-control" placeholder="Buscar por nombre, descripción, ID o estado..." />
                    <button class="btn btn-primary" type="button" id="btnBuscar">
                        <i class="bi bi-search"></i> Buscar
                    </button>
                    <button class="btn btn-outline-secondary" type="button" id="btnLimpiar">
                        <i class="bi bi-x-circle"></i> Limpiar
                    </button>
                </div>
            </div>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            }

            <table id="tablaRoles" class="table table-hover align-middle text-center w-100">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Nombre</th>
                        <th>Descripción</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdRol</td>
                            <td>@item.NombreRol</td>
                            <td>@(item.Descripcion ?? "Sin descripción")</td>
                            <td>
                                <span class="badge @(item.Estado == "Activo" ? "bg-success" : "bg-danger")">
                                    @item.Estado
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Modificar", "Roles", new { CodigoRol = item.IdRol })"
                                       class="btn btn-outline-secondary btn-sm" title="Modificar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="@Url.Action("Eliminar", "Roles", new { CodigoRol = item.IdRol })"
                                       class="btn btn-outline-danger btn-sm"
                                       title="Eliminar"
                                       onclick="return confirm('¿Seguro que deseas eliminar este rol?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#tablaRoles').DataTable({
                language: { url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' },
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                responsive: true,
                ordering: true,
                columnDefs: [
                    { orderable: false, targets: [4] } // acciones no ordenables
                ]
            });

            // Funcionalidad de búsqueda
            $('#btnBuscar').on('click', function () {
                table.search($('#buscarInput').val()).draw();
            });

            $('#btnLimpiar').on('click', function () {
                $('#buscarInput').val('');
                table.search('').draw();
            });

            // Búsqueda al presionar Enter
            $('#buscarInput').on('keyup', function (e) {
                if (e.key === 'Enter') {
                    table.search(this.value).draw();
                }
            });
        });
    </script>
}

