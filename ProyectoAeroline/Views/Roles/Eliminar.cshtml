@model ProyectoAeroline.Models.RolesModel
@{
    ViewData["Title"] = "Eliminar Rol";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="bi bi-shield-x"></i> Eliminar Rol
            </h3>
            <a href="/Roles/Listar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light">
            <h5 class="text-center mb-4 text-danger fw-semibold">
                ¿Seguro que deseas eliminar este rol?
            </h5>

            <form asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()

                <!-- Campo oculto: ESTE ES CLAVE -->
                <input type="hidden" asp-for="IdRol" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label fw-bold">ID Rol</label>
                        <input class="form-control" value="@Model.IdRol" readonly />
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Nombre</label>
                        <input class="form-control" value="@Model.NombreRol" readonly />
                    </div>

                    <div class="col-md-12">
                        <label class="form-label fw-bold">Descripción</label>
                        <textarea class="form-control" rows="3" readonly>@(Model.Descripcion ?? "Sin descripción")</textarea>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Estado</label>
                        <input class="form-control" value="@Model.Estado" readonly />
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger px-4 me-2">
                        <i class="bi bi-trash3-fill"></i> Eliminar definitivamente
                    </button>
                    <a href="/Roles/Listar" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

