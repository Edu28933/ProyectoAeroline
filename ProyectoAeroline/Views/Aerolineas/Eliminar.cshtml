@model ProyectoAeroline.Models.AerolineasModel

@{
    ViewData["Title"] = "Eliminar Aerolínea";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient-danger text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center header-glow-danger">
            <h3 class="mb-0">
                🗑️ <i class="bi bi-trash3-fill"></i> <strong>Eliminar Aerolínea</strong>
            </h3>
            <a href="/Aerolineas/Listar" class="btn btn-light btn-sm fw-bold fancy-btn-cancel">
                🔙 <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light text-center">
            <h5 class="text-danger fw-bold mb-4 animate__animated animate__pulse animate__infinite">
                ⚠️ ¿Estás seguro de que deseas eliminar esta aerolínea?
            </h5>

            <div class="table-responsive mb-4">
                <table class="table table-bordered shadow-sm align-middle">
                    <tr><th>🌐 Código IATA</th><td>@Model.IATA</td></tr>
                    <tr><th>🏢 Nombre</th><td>@Model.Nombre</td></tr>
                    <tr><th>🌍 País</th><td>@Model.Pais</td></tr>
                    <tr><th>🏙️ Ciudad</th><td>@Model.Ciudad</td></tr>
                    <tr><th>📍 Dirección</th><td>@Model.Direccion</td></tr>
                    <tr><th>📞 Teléfono</th><td>@Model.Telefono</td></tr>
                    <tr>
                        <th>⚙️ Estado</th>
                        <td>
                            <span class="badge @(Model.Estado == "Activo" ? "bg-success" : "bg-danger") px-3 py-2 rounded-pill shadow-sm">
                                @(Model.Estado == "Activo" ? "🟢 Activo" : "🔴 Inactivo")
                            </span>
                        </td>
                    </tr>
                </table>
            </div>

            <form id="formEliminar" asp-action="Eliminar" asp-controller="Aerolineas" method="post">
                <input type="hidden" asp-for="IdAerolinea" />

                <button type="button" class="btn btn-danger px-4 me-2 fancy-delete" onclick="confirmarEliminacion()">
                    💣 <i class="bi bi-trash"></i> Eliminar
                </button>

                <a href="/Aerolineas/Listar" class="btn btn-outline-secondary px-4 fancy-cancel">
                    🙅‍♂️ <i class="bi bi-x-circle"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        // Confirmación con estilo
        function confirmarEliminacion() {
            // Estados que no permiten eliminación
            const estadosProhibidos = ['Activo'];
            const estado = '@Model.Estado';
            
            // Validar estado
            if (estadosProhibidos.includes(estado)) {
                Swal.fire({
                    icon: 'error',
                    title: '⚠️ No se puede eliminar',
                    html: `❌ <strong>La aerolínea tiene estado "${estado}"</strong><br><br>Por favor, cambie el estado a "Inactivo" antes de intentar eliminar.`,
                    confirmButtonColor: '#dc3545',
                    confirmButtonText: 'Entendido'
                });
                return;
            }

            Swal.fire({
                title: '¿Eliminar Aerolínea?',
                html: `✈️ <b>@Model.Nombre</b> será eliminada permanentemente.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar',
                backdrop: `rgba(0,0,0,0.4)`
            }).then((result) => {
                if (result.isConfirmed) {
                    Swal.fire({
                        icon: 'success',
                        title: '✅ Eliminada correctamente',
                        text: 'La aerolínea ha sido eliminada del sistema.',
                        showConfirmButton: false,
                        timer: 1400
                    }).then(() => {
                        document.getElementById('formEliminar').submit();
                    });
                }
            });
        }
    </script>

    <style>
        /* Gradiente rojo elegante */
        .bg-gradient-danger {
            background: linear-gradient(135deg, #dc3545, #ff6b6b);
        }

        .header-glow-danger {
            box-shadow: 0 0 25px rgba(255, 0, 0, 0.6);
        }

        /* Botones */
        .fancy-delete {
            border-radius: 30px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

            .fancy-delete:hover {
                transform: scale(1.1);
                box-shadow: 0 0 20px rgba(220, 53, 69, 0.6);
            }

        .fancy-cancel {
            border-radius: 30px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

            .fancy-cancel:hover {
                transform: scale(1.1);
                box-shadow: 0 0 20px rgba(108, 117, 125, 0.5);
            }

        /* Tabla con efecto */
        table th {
            background-color: #f8d7da;
            color: #721c24;
            width: 30%;
        }

        table td {
            background-color: #fff;
        }

        table tr:hover td {
            background-color: #ffe6e6;
            transition: 0.2s ease-in-out;
        }

        /* Tarjeta */
        .card {
            transition: 0.4s ease;
        }

            .card:hover {
                transform: scale(1.02);
                box-shadow: 0 0 25px rgba(255, 0, 0, 0.3);
            }
    </style>
}
