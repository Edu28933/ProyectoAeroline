@model ProyectoAeroline.Models.HistorialesModel

@{
    ViewData["Title"] = "Modificar Historial";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-primary text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Modificar historial</h4>
        <a href="/Historiales/Listar" class="btn btn-light btn-sm fw-bold">
            <i class="bi bi-arrow-left-circle"></i> Regresar
        </a>
    </div>

    <div class="card-body p-4">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <div class="card-body bg-light rounded-bottom-4">
            <form asp-action="Modificar" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdHistorial" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdHistorial" class="control-label">ID Historial</label>
                        <input asp-for="IdHistorial" class="form-control" readonly />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdBoleto" class="form-label fw-bold">Boleto</label>
                        <select asp-for="IdBoleto" class="form-select" required>
                            <option value="">Seleccione un boleto</option>
                            @foreach (var boleto in ViewBag.Boletos as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@boleto.Value" selected="@(boleto.Value == Model.IdBoleto.ToString())">@boleto.Text</option>
                            }
                        </select>
                        <span asp-validation-for="IdBoleto" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdPasajero" class="form-label fw-bold">Pasajero</label>
                        <select asp-for="IdPasajero" class="form-select" required>
                            <option value="">Seleccione un pasajero</option>
                            @foreach (var pasajero in ViewBag.Pasajeros as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@pasajero.Value" selected="@(pasajero.Value == Model.IdPasajero.ToString())">@pasajero.Text</option>
                            }
                        </select>
                        <span asp-validation-for="IdPasajero" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdAerolinea" class="form-label fw-bold">Aerolínea</label>
                        <select asp-for="IdAerolinea" class="form-select" required>
                            <option value="">Seleccione una aerolínea</option>
                            @foreach (var aerolinea in ViewBag.Aerolineas as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@aerolinea.Value" selected="@(aerolinea.Value == Model.IdAerolinea.ToString())">@aerolinea.Text</option>
                            }
                        </select>
                        <span asp-validation-for="IdAerolinea" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdVuelo" class="form-label fw-bold">Vuelo</label>
                        <select asp-for="IdVuelo" class="form-select" required>
                            <option value="">Seleccione un vuelo</option>
                            @foreach (var vuelo in ViewBag.Vuelos as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@vuelo.Value" selected="@(vuelo.Value == Model.IdVuelo.ToString())">@vuelo.Text</option>
                            }
                        </select>
                        <span asp-validation-for="IdVuelo" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Observacion" class="form-label fw-bold">Observación</label>
                        <textarea asp-for="Observacion" class="form-control" rows="5"></textarea>
                        <span asp-validation-for="Observacion" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Guardar cambios
                    </button>
                    <a href="/Historiales/Listar" class="btn btn-outline-secondary ms-2 px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

