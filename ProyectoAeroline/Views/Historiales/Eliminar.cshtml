@model ProyectoAeroline.Models.HistorialesModel

@{
    ViewData["Title"] = "Eliminar Historial";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="bi bi-trash-fill"></i> Eliminar Historial
            </h3>
            <a href="/Historiales/Listar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light">
            <h5 class="text-center mb-4 text-danger fw-semibold">
                ¿Seguro que deseas eliminar este historial?
            </h5>

            <form asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdHistorial" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">ID Historial</label>
                        <input class="form-control" value="@Model.IdHistorial" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">ID Boleto</label>
                        <input class="form-control" value="@Model.IdBoleto" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">ID Pasajero</label>
                        <input class="form-control" value="@Model.IdPasajero" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">ID Aerolínea</label>
                        <input class="form-control" value="@Model.IdAerolinea" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">ID Vuelo</label>
                        <input class="form-control" value="@Model.IdVuelo" readonly />
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Observación</label>
                        <textarea class="form-control" rows="4" readonly>@Model.Observacion</textarea>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger px-4 me-2">
                        <i class="bi bi-trash3-fill"></i> Eliminar definitivamente
                    </button>
                    <a href="/Historiales/Listar" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

