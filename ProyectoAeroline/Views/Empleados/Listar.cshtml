@model IEnumerable<ProyectoAeroline.Models.EmpleadosModel>

@{
    ViewData["Title"] = "Listar Empleados";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center header-glow">
            <h3 class="mb-0">
                👔 <i class="bi bi-people-fill"></i> <strong>Lista de Empleados</strong>
            </h3>
            <a href="/Empleados/Guardar" class="btn btn-light btn-sm fw-bold fancy-btn">
                ➕ <i class="bi bi-plus-circle"></i> Agregar
            </a>
        </div>

        <div class="card-body bg-light">
            <table id="tablaEmpleados" class="table table-hover align-middle text-center w-100">
                <thead class="table-primary">
                    <tr>
                        <th>🆔 ID</th>
                        <th>👤 Usuario</th>
                        <th>📛 Nombre</th>
                        <th>💼 Cargo</th>
                        <th>🪪 Licencia</th>
                        <th>📞 Teléfono</th>
                        <th>📧 Correo</th>
                        <th>💰 Salario</th>
                        <th>📍 Dirección</th>
                        <th>📅 Fecha Ingreso</th>
                        <th>🚨 Contacto Emergencia</th>
                        <th>⚙️ Estado</th>
                        <th>📷 Foto</th>
                        <th>🪄 Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var fotoRuta = string.IsNullOrEmpty(item.FotoRuta)
                        ? "/img/empleados/default-user.png"
                        : (System.IO.Path.HasExtension(item.FotoRuta)
                        ? item.FotoRuta
                        : item.FotoRuta + ".jpg");

                        <tr>
                            <td>@item.IdEmpleado</td>
                            <td>@item.IdUsuario</td>
                            <td>@item.Nombre</td>
                            <td>@item.Cargo</td>
                            <td>@item.Licencia</td>
                            <td>@item.Telefono</td>
                            <td>@item.Correo</td>
                            <td>Q @item.Salario.ToString("N2")</td>
                            <td>@item.Direccion</td>
                            <td>@item.FechaIngreso.ToString("dd/MM/yyyy")</td>
                            <td>@item.ContactoEmergencia</td>
                            <td>
                                <span class="badge @(item.Estado == "Activo" ? "bg-success" : "bg-danger") px-3 py-2 rounded-pill shadow-sm">
                                    @(item.Estado == "Activo" ? "🟢 Activo" : "🔴 Inactivo")
                                </span>
                            </td>
                            <td>
                                <img src="@fotoRuta"
                                     alt="Foto"
                                     class="foto-empleado shadow-sm"
                                     width="60"
                                     height="60"
                                     style="object-fit: cover; border-radius: 10px; cursor: pointer; transition: transform 0.3s;" />
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("GenerarPerfil", "Empleados", new { idEmpleado = item.IdEmpleado })"
                                       class="btn btn-outline-info btn-sm fancy-action" title="Generar Perfil">
                                        📄 <i class="bi bi-file-earmark-pdf"></i>
                                    </a>
                                    <a href="@Url.Action("Modificar", "Empleados", new { CodigoEmpleado = item.IdEmpleado })"
                                       class="btn btn-outline-primary btn-sm fancy-action" title="Editar Empleado">
                                        🛠️ <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <button type="button" class="btn btn-outline-danger btn-sm fancy-action"
                                            onclick="confirmarEliminacion('@item.IdEmpleado', '@item.Nombre')"
                                            title="Eliminar Empleado">
                                        🗑️ <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para ampliar foto -->
<div class="modal fade" id="modalFoto" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-transparent border-0 shadow-none">
            <div class="modal-body text-center p-0">
                <img id="fotoAmpliada" src="" class="img-fluid rounded zoom-in" alt="Foto del empleado" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Animate.css -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- DataTables -->
    <script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />

    <script>
        $(document).ready(function () {
            $('#tablaEmpleados').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json'
                },
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                responsive: true,
                ordering: true,
                columnDefs: [
                    { orderable: false, targets: [12, 13] }
                ]
            });
        });

        // Mostrar foto en modal
        document.addEventListener("click", function (e) {
            if (e.target.classList.contains("foto-empleado")) {
                const ruta = e.target.getAttribute("src");
                document.getElementById("fotoAmpliada").setAttribute("src", ruta);
                const modal = new bootstrap.Modal(document.getElementById("modalFoto"));
                modal.show();
            }
        });

        function confirmarEliminacion(id, nombre) {
            Swal.fire({
                title: '¿Eliminar Empleado?',
                html: `👔 <b>${nombre}</b> será eliminado permanentemente.`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Sí, eliminar',
                cancelButtonText: 'Cancelar',
                backdrop: 'rgba(0,0,0,0.4)'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/Empleados/Eliminar?CodigoEmpleado=${id}`;
                }
            });
        }
    </script>

    <style>
        .bg-gradient {
            background: linear-gradient(135deg, #007bff, #00b4d8);
        }

        .header-glow {
            box-shadow: 0 0 25px rgba(0, 174, 255, 0.6);
        }

        .fancy-btn,
        .fancy-action {
            border-radius: 25px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

            .fancy-btn:hover {
                transform: scale(1.1);
                box-shadow: 0 0 20px rgba(0, 174, 255, 0.6);
            }

            .fancy-action:hover {
                transform: scale(1.1);
                box-shadow: 0 0 15px rgba(255, 255, 255, 0.3);
            }

        table thead {
            background: linear-gradient(135deg, #90e0ef, #0077b6);
            color: white;
            text-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        }

        table tbody tr:hover {
            background-color: #caf0f8 !important;
            transform: scale(1.01);
            transition: 0.2s ease-in-out;
        }

        .card {
            transition: 0.4s ease;
        }

            .card:hover {
                transform: scale(1.02);
                box-shadow: 0 0 25px rgba(0, 123, 255, 0.3);
            }

        .badge {
            font-size: 0.9rem;
            letter-spacing: 0.5px;
        }

        .foto-empleado:hover {
            transform: scale(1.1);
        }
    </style>
}
