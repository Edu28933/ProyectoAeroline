@model IEnumerable<ProyectoAeroline.Models.EmpleadosModel>

@{
    ViewData["Title"] = "Listar Empleados";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-people-fill"></i> Lista de Empleados</h3>
            <a href="/Empleados/Guardar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-plus-circle"></i> Agregar
            </a>
        </div>

        <div class="card-body bg-light">
            <table id="tablaEmpleados" class="table table-hover align-middle text-center w-100">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Usuario</th>
                        <th>Nombre</th>
                        <th>Cargo</th>
                        <th>Licencia</th>
                        <th>Teléfono</th>
                        <th>Correo</th>
                        <th>Salario</th>
                        <th>Dirección</th>
                        <th>Fecha Ingreso</th>
                        <th>Contacto Emergencia</th>
                        <th>Estado</th>
                        <th>Foto</th>
                        <th>Acciones</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        var fotoRuta = string.IsNullOrEmpty(item.FotoRuta)
                        ? "/img/empleados/default-user.png"
                        : (System.IO.Path.HasExtension(item.FotoRuta)
                        ? item.FotoRuta
                        : item.FotoRuta + ".jpg");

                        <tr>
                            <td>@item.IdEmpleado</td>
                            <td>@item.IdUsuario</td>
                            <td>@item.Nombre</td>
                            <td>@item.Cargo</td>
                            <td>@item.Licencia</td>
                            <td>@item.Telefono</td>
                            <td>@item.Correo</td>
                            <td>Q @item.Salario.ToString("N2")</td>
                            <td>@item.Direccion</td>
                            <td>@item.FechaIngreso.ToString("dd/MM/yyyy")</td>
                            <td>@item.ContactoEmergencia</td>
                            <td>
                                <span class="badge @(item.Estado == "Activo" ? "bg-success" : "bg-danger")">
                                    @item.Estado
                                </span>
                            </td>
                            <td>
                                <img src="@fotoRuta"
                                     alt="Foto"
                                     class="foto-empleado shadow-sm"
                                     width="60"
                                     height="60"
                                     style="object-fit: cover; border-radius: 10px; cursor: pointer;" />
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Modificar", "Empleados", new { CodigoEmpleado = item.IdEmpleado })"
                                       class="btn btn-outline-secondary btn-sm" title="Modificar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="@Url.Action("Eliminar", "Empleados", new { CodigoEmpleado = item.IdEmpleado })"
                                       class="btn btn-outline-danger btn-sm"
                                       title="Eliminar"
                                       onclick="return confirm('¿Seguro que deseas eliminar este empleado?');">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Modal para ampliar foto -->
<div class="modal fade" id="modalFoto" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-transparent border-0 shadow-none">
            <div class="modal-body text-center p-0">
                <img id="fotoAmpliada" src="" class="img-fluid rounded zoom-in" alt="Foto del empleado" />
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaEmpleados').DataTable({
                language: { url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' },
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                responsive: true,
                ordering: true,
                columnDefs: [
                    { orderable: false, targets: [12, 13] } // foto y acciones no ordenables
                ]
            });
        });

        // Mostrar foto en modal
        document.addEventListener("click", function (e) {
            if (e.target.classList.contains("foto-empleado")) {
                const ruta = e.target.getAttribute("src");
                document.getElementById("fotoAmpliada").setAttribute("src", ruta);
                const modal = new bootstrap.Modal(document.getElementById("modalFoto"));
                modal.show();
            }
        });
    </script>
}
