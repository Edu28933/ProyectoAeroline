
@model IEnumerable<ProyectoAeroline.Models.EmpleadosModel>

@{
    ViewData["Title"] = "Listar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Listar</h1>

<p>
    <a href="/Empleados/Guardar" class="btn btn-primary">
        Agregar nuevo empleado
    </a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdEmpleado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdUsuario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Licencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ContactoEmergencia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdEmpleado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdUsuario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cargo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Licencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactoEmergencia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado)
            </td>

                <!-- 📸 Columna de foto -->
                <td>
                    @if (!string.IsNullOrEmpty(item.FotoRuta))
                    {
                        var fotoConExt = System.IO.Path.HasExtension(item.FotoRuta)
                        ? item.FotoRuta
                        : item.FotoRuta + ".jpg";

                        <img src="@fotoConExt"
                             alt="Foto"
                             class="foto-empleado"
                             width="80"
                             height="80"
                             style="object-fit: cover; border-radius: 8px; box-shadow: 0 0 4px rgba(0,0,0,0.3); cursor: pointer; transition: transform 0.3s;"
                             onmouseover="this.style.transform='scale(1.05)'"
                             onmouseout="this.style.transform='scale(1)'" />
                    }
                    else
                    {
                        <span class="text-muted">Sin foto</span>
                    }
                </td>

                <td>
                    @Html.ActionLink(
                    "Modificar",
                                "Modificar",
                                "Empleados",
                                new { CodigoEmpleado = item.IdEmpleado },
                                new { @class = "btn btn-info" }
                                )
                |
                @Html.ActionLink(
                                "Eliminar",
                                "Eliminar",                 // Acción en tu UsuariosController
                                "Empleados",                 // Controlador
                                new { CodigoEmpleado = item.IdEmpleado }, // route values
                                new { @class = "btn btn-dark", onclick = "return confirm('¿Seguro que deseas eliminar este empleado?');" } // html attrs
                                )

            </td>
        </tr>
}
    </tbody>
</table>
<!-- ✅ Modal (fuera del bucle) -->
<div class="modal fade" id="modalFoto" tabindex="-1" aria-labelledby="modalFotoLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content bg-transparent border-0 shadow-none">
            <div class="modal-body text-center p-0">
                <img id="fotoAmpliada" src="" class="img-fluid rounded zoom-in" alt="Foto del empleado" />
            </div>
        </div>
    </div>
</div>

<!-- ✅ Estilos personalizados -->
<style>
    /* Efecto de zoom suave al abrir el modal */
    .zoom-in {
        transform: scale(0.8);
        opacity: 0;
        transition: transform 0.4s ease, opacity 0.4s ease;
    }

    .modal.show .zoom-in {
        transform: scale(1);
        opacity: 1;
    }

    /* Opcional: efecto de sombra más elegante al pasar el mouse */
    .foto-empleado:hover {
        box-shadow: 0 0 8px rgba(0, 123, 255, 0.6);
    }
</style>

<!-- ✅ Scripts -->
@section Scripts {
    <script>
        document.addEventListener("click", function (e) {
            if (e.target.classList.contains("foto-empleado")) {
                const ruta = e.target.getAttribute("src");
                document.getElementById("fotoAmpliada").setAttribute("src", ruta);
                const modal = new bootstrap.Modal(document.getElementById("modalFoto"));
                modal.show();
            }
        });
    </script>
}