@model ProyectoAeroline.Models.EmpleadosModel

@{
    ViewData["Title"] = "Guardar Empleado";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center header-glow">
            <h3 class="mb-0">
                👤 <i class="bi bi-person-plus-fill"></i> <strong>Registrar Nuevo Empleado</strong>
            </h3>
            <a href="/Empleados/Listar" class="btn btn-light btn-sm fw-bold fancy-btn-cancel">
                🔙 <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light">
            @if (ViewBag.Error != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>❌ Error:</strong> @ViewBag.Error
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            <form asp-action="Guardar" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdUsuario" class="form-label fw-bold">👤 Usuario</label>
                        <select asp-for="IdUsuario" class="form-select rounded-3" asp-items="ViewBag.Usuarios" required>
                            <option value="">-- Seleccione un usuario --</option>
                        </select>
                        <span asp-validation-for="IdUsuario" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label fw-bold">📛 Nombre Completo</label>
                        <input asp-for="Nombre" class="form-control rounded-3" placeholder="Nombre del empleado" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Cargo" class="form-label fw-bold">💼 Cargo</label>
                        <select asp-for="Cargo" id="Cargo" class="form-select rounded-3" required>
                            <option value="">-- Seleccione un cargo --</option>
                            <option value="Piloto">Piloto</option>
                            <option value="Copiloto">Copiloto</option>
                            <option value="Azafata">Azafata</option>
                            <option value="Mecánico">Mecánico</option>
                            <option value="Administrador">Administrador</option>
                            <option value="Despachador de vuelo">Despachador de vuelo</option>
                            <option value="Controlador aéreo">Controlador aéreo</option>
                            <option value="Ingeniero de mantenimiento">Ingeniero de mantenimiento</option>
                            <option value="Supervisor de vuelo">Supervisor de vuelo</option>
                            <option value="Operador de rampa">Operador de rampa</option>
                            <option value="Personal de limpieza">Personal de limpieza</option>
                            <option value="Agente de servicio al cliente">Agente de servicio al cliente</option>
                            <option value="Encargado de logística">Encargado de logística</option>
                            <option value="Analista de operaciones">Analista de operaciones</option>
                        </select>
                        <span asp-validation-for="Cargo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Licencia" class="form-label fw-bold">📜 Licencia</label>
                        <input asp-for="Licencia" class="form-control rounded-3" placeholder="Número de licencia" />
                        <span asp-validation-for="Licencia" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label fw-bold">📱 Teléfono</label>
                        <input asp-for="Telefono" class="form-control rounded-3" placeholder="Teléfono" type="number" required />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Correo" class="form-label fw-bold">📧 Correo</label>
                        <input asp-for="Correo" class="form-control rounded-3" placeholder="correo@ejemplo.com" type="email" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Salario" class="form-label fw-bold">💰 Salario</label>
                        <input asp-for="Salario" id="Salario" class="form-control rounded-3" type="number" step="0.01" required readonly style="background-color: #e9ecef; cursor: not-allowed;" />
                        <small class="form-text text-muted">💡 El salario se asigna automáticamente según el cargo seleccionado.</small>
                        <span asp-validation-for="Salario" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Direccion" class="form-label fw-bold">📍 Dirección</label>
                        <input asp-for="Direccion" class="form-control rounded-3" placeholder="Dirección del empleado" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FechaIngreso" class="form-label fw-bold">📅 Fecha Ingreso</label>
                        <input asp-for="FechaIngreso" id="FechaIngreso" class="form-control rounded-3" type="date" required />
                        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ContactoEmergencia" class="form-label fw-bold">🚨 Contacto de Emergencia</label>
                        <input asp-for="ContactoEmergencia" class="form-control rounded-3" placeholder="Teléfono de emergencia" type="number" required />
                        <span asp-validation-for="ContactoEmergencia" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label fw-bold">⚙️ Estado</label>
                        <select asp-for="Estado" class="form-select rounded-3" required>
                            <option value="">-- Seleccione un estado --</option>
                            <option value="Activo">🟢 Activo</option>
                            <option value="Inactivo">🔴 Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">📸 Fotografía</label>
                        <div class="d-flex align-items-center">
                            <input type="file" id="FotoArchivoInput" class="d-none" asp-for="FotoArchivo" accept="image/*" />
                            <label for="FotoArchivoInput" class="btn btn-dark btn-sm me-2 custom-file-upload rounded-3">
                                <i class="bi bi-upload"></i> Seleccionar archivo
                            </label>
                            <span id="archivoSeleccionadoNombre" class="text-muted fst-italic">Sin archivo</span>
                        </div>

                        <div class="mt-2 text-center">
                            <img id="vistaPreviaFoto" src="#" alt="Vista previa" class="rounded shadow-sm border" style="max-width: 180px; display: none;" />
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4 py-3 fancy-btn">
                        💾 <i class="bi bi-save"></i> Guardar
                    </button>
                    <a href="/Empleados/Listar" class="btn btn-outline-secondary ms-2 px-4 py-3 fancy-cancel">
                        🙅‍♂️ <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        .bg-gradient {
            background: linear-gradient(135deg, #007bff, #00b4d8);
        }

        .header-glow {
            box-shadow: 0 0 25px rgba(0, 174, 255, 0.6);
        }

        .fancy-btn, .fancy-btn-cancel, .fancy-cancel {
            border-radius: 25px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

        .fancy-btn:hover {
            transform: scale(1.1);
            box-shadow: 0 0 20px rgba(0, 174, 255, 0.6);
        }

        .fancy-btn-cancel:hover, .fancy-cancel:hover {
            transform: scale(1.05);
        }

        .form-control.rounded-3, .form-select.rounded-3 {
            border-radius: 15px !important;
            transition: all 0.3s ease;
        }

        .form-control.rounded-3:focus, .form-select.rounded-3:focus {
            border-color: #007bff;
            box-shadow: 0 0 10px rgba(0, 123, 255, 0.25);
        }

        .card {
            transition: 0.4s ease;
        }

        .card:hover {
            transform: scale(1.01);
            box-shadow: 0 0 25px rgba(0, 123, 255, 0.3);
        }
    </style>

    <script>
        document.getElementById('FotoArchivoInput').addEventListener('change', function(event) {
            var fileNameSpan = document.getElementById('archivoSeleccionadoNombre');
            var previewImage = document.getElementById('vistaPreviaFoto');

            if (this.files && this.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewImage.style.display = 'block'; // Muestra la imagen una vez cargada
                };

                reader.readAsDataURL(this.files[0]); // Lee el archivo como una URL de datos

                fileNameSpan.textContent = this.files[0].name; // Actualiza el nombre del archivo
            } else {
                previewImage.src = '#';
                previewImage.style.display = 'none'; // Oculta la imagen si no hay archivo
                fileNameSpan.textContent = 'Sin archivos seleccionados'; // Restablece el texto
            }
        });
    </script>

    <script>
        // Bloquear fechas pasadas
        const fechaIngreso = document.getElementById("FechaIngreso");
        const hoy = new Date().toISOString().split("T")[0];
        fechaIngreso.min = hoy;

        // Asignar salario según cargo
        const salarioInput = document.getElementById("Salario");
        const cargoSelect = document.getElementById("Cargo");

        cargoSelect.addEventListener("change", function () {
            let salario = 0;

            switch (this.value) {
                case "Piloto": salario = 15000; break;
                case "Copiloto": salario = 12000; break;
                case "Azafata": salario = 8000; break;
                case "Mecánico": salario = 9000; break;
                case "Administrador": salario = 7000; break;
                case "Despachador de vuelo": salario = 8500; break;
                case "Controlador aéreo": salario = 11000; break;
                case "Ingeniero de mantenimiento": salario = 10000; break;
                case "Supervisor de vuelo": salario = 9500; break;
                case "Operador de rampa": salario = 6000; break;
                case "Personal de limpieza": salario = 4500; break;
                case "Agente de servicio al cliente": salario = 5000; break;
                case "Encargado de logística": salario = 7000; break;
                case "Analista de operaciones": salario = 9000; break;
                default: salario = 0; break;
            }

            salarioInput.value = salario;
        });
    </script>
}