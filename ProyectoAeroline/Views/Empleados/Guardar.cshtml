@model ProyectoAeroline.Models.EmpleadosModel

@{
    ViewData["Title"] = "Guardar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


@*<h1 class="mb-3">Guardar</h1>
<hr />*@

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-dark text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-person-plus-fill"></i> Registrar nuevo empleado</h4>
        <a href="/Empleados/Listar" class="btn btn-outline-light btn-sm">
            <i class="bi bi-arrow-left"></i> Regresar
        </a>
    </div>

    <div class="card-body p-4">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <div class="card-body bg-light rounded-bottom-4">
            <form asp-action="Guardar" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdUsuario" class="form-label fw-bold">Usuario</label>
                        <input asp-for="IdUsuario" class="form-control" placeholder="Id de usuario" />
                        <span asp-validation-for="IdUsuario" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Nombre" class="form-label fw-bold">Nombre completo</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Nombre del empleado" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Cargo" class="form-label fw-bold"></label>
                        <select asp-for="Cargo" id="Cargo" class="form-select">
                            <option value="">Seleccione un cargo</option>
                            <option value="Piloto">Piloto</option>
                            <option value="Copiloto">Copiloto</option>
                            <option value="Azafata">Azafata</option>
                            <option value="Mecánico">Mecánico</option>
                            <option value="Administrador">Administrador</option>
                            <option value="Despachador de vuelo">Despachador de vuelo</option>
                            <option value="Controlador aéreo">Controlador aéreo</option>
                            <option value="Ingeniero de mantenimiento">Ingeniero de mantenimiento</option>
                            <option value="Supervisor de vuelo">Supervisor de vuelo</option>
                            <option value="Operador de rampa">Operador de rampa</option>
                            <option value="Personal de limpieza">Personal de limpieza</option>
                            <option value="Agente de servicio al cliente">Agente de servicio al cliente</option>
                            <option value="Encargado de logística">Encargado de logística</option>
                            <option value="Analista de operaciones">Analista de operaciones</option>
                        </select>
                        <span asp-validation-for="Cargo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Licencia" class="form-label fw-bold">Licencia</label>
                        <input asp-for="Licencia" class="form-control" placeholder="Número de licencia" />
                        <span asp-validation-for="Licencia" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Telefono" class="form-label fw-bold">Teléfono</label>
                        <input asp-for="Telefono" class="form-control" placeholder="Teléfono" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Correo" class="form-label fw-bold">Correo</label>
                        <input asp-for="Correo" class="form-control" placeholder="Correo electrónico" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Salario" class="form-label fw-bold"></label>
                        <input asp-for="Salario" id="Salario" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Salario" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Direccion" class="form-label fw-bold">Dirección</label>
                        <input asp-for="Direccion" class="form-control" placeholder="Dirección del empleado" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FechaIngreso" class="form-label fw-bold"></label>
                        <input asp-for="FechaIngreso" id="FechaIngreso" class="form-control" type="date" />
                        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ContactoEmergencia" class="form-label fw-bold">Contacto de emergencia</label>
                        <input asp-for="ContactoEmergencia" class="form-control" placeholder="Teléfono de emergencia" />
                        <span asp-validation-for="ContactoEmergencia" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label fw-bold">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label class="form-label fw-bold">Fotografía</label>
                        <div class="d-flex align-items-center">
                            <input type="file" id="FotoArchivoInput" class="d-none" asp-for="FotoArchivo" accept="image/*" />
                            <label for="FotoArchivoInput" class="btn btn-dark btn-sm me-2 custom-file-upload">
                                <i class="bi bi-upload"></i> Seleccionar archivo
                            </label>
                            <span id="archivoSeleccionadoNombre" class="text-muted fst-italic">Sin archivo</span>
                        </div>

                        <div class="mt-2 text-center">
                            <img id="vistaPreviaFoto" src="#" alt="Vista previa" class="rounded shadow-sm border" style="max-width: 180px; display: none;" />
                        </div>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Guardar
                    </button>
                    <a href="/Empleados/Listar" class="btn btn-outline-secondary ms-2 px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.getElementById('FotoArchivoInput').addEventListener('change', function(event) {
            var fileNameSpan = document.getElementById('archivoSeleccionadoNombre');
            var previewImage = document.getElementById('vistaPreviaFoto');

            if (this.files && this.files[0]) {
                var reader = new FileReader();

                reader.onload = function(e) {
                    previewImage.src = e.target.result;
                    previewImage.style.display = 'block'; // Muestra la imagen una vez cargada
                };

                reader.readAsDataURL(this.files[0]); // Lee el archivo como una URL de datos

                fileNameSpan.textContent = this.files[0].name; // Actualiza el nombre del archivo
            } else {
                previewImage.src = '#';
                previewImage.style.display = 'none'; // Oculta la imagen si no hay archivo
                fileNameSpan.textContent = 'Sin archivos seleccionados'; // Restablece el texto
            }
        });
    </script>

    <script>
        // Bloquear fechas pasadas
        const fechaIngreso = document.getElementById("FechaIngreso");
        const hoy = new Date().toISOString().split("T")[0];
        fechaIngreso.min = hoy;

        // Asignar salario según cargo
        const salarioInput = document.getElementById("Salario");
        const cargoSelect = document.getElementById("Cargo");

        cargoSelect.addEventListener("change", function () {
            let salario = 0;

            switch (this.value) {
                case "Piloto": salario = 15000; break;
                case "Copiloto": salario = 12000; break;
                case "Azafata": salario = 8000; break;
                case "Mecánico": salario = 9000; break;
                case "Administrador": salario = 7000; break;
                case "Despachador de vuelo": salario = 8500; break;
                case "Controlador aéreo": salario = 11000; break;
                case "Ingeniero de mantenimiento": salario = 10000; break;
                case "Supervisor de vuelo": salario = 9500; break;
                case "Operador de rampa": salario = 6000; break;
                case "Personal de limpieza": salario = 4500; break;
                case "Agente de servicio al cliente": salario = 5000; break;
                case "Encargado de logística": salario = 7000; break;
                case "Analista de operaciones": salario = 9000; break;
                default: salario = 0; break;
            }

            salarioInput.value = salario;
        });
    </script>
}