@model ProyectoAeroline.Models.EmpleadosModel

@{
    ViewData["Title"] = "Modificar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@*<h1>Modificar</h1>*@
<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-primary text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Modificar empleado</h4>
        <a href="/Empleados/Listar" class="btn btn-light btn-sm fw-bold">
            <i class="bi bi-arrow-left-circle"></i> Regresar
        </a>
    </div>

    <div class="card-body p-4">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <div class="card-body bg-light rounded-bottom-4">
            <form asp-action="Modificar" method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdEmpleado" class="control-label"></label>
                        <input asp-for="IdEmpleado" class="form-control" />
                        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="IdUsuario" class="control-label"></label>
                        <input asp-for="IdUsuario" class="form-control" />
                        <span asp-validation-for="IdUsuario" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Cargo" class="form-label fw-bold"></label>
                        <select asp-for="Cargo" id="Cargo" class="form-select">
                            <option value="">Seleccione un cargo</option>
                            <option value="Piloto">Piloto</option>
                            <option value="Copiloto">Copiloto</option>
                            <option value="Azafata">Azafata</option>
                            <option value="Mecánico">Mecánico</option>
                            <option value="Administrador">Administrador</option>
                            <option value="Despachador de vuelo">Despachador de vuelo</option>
                            <option value="Controlador aéreo">Controlador aéreo</option>
                            <option value="Ingeniero de mantenimiento">Ingeniero de mantenimiento</option>
                            <option value="Supervisor de vuelo">Supervisor de vuelo</option>
                            <option value="Operador de rampa">Operador de rampa</option>
                            <option value="Personal de limpieza">Personal de limpieza</option>
                            <option value="Agente de servicio al cliente">Agente de servicio al cliente</option>
                            <option value="Encargado de logística">Encargado de logística</option>
                            <option value="Analista de operaciones">Analista de operaciones</option>
                        </select>
                        <span asp-validation-for="Cargo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Licencia" class="control-label"></label>
                        <input asp-for="Licencia" class="form-control" />
                        <span asp-validation-for="Licencia" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Telefono" class="control-label"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Correo" class="control-label"></label>
                        <input asp-for="Correo" class="form-control" />
                        <span asp-validation-for="Correo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Salario" class="form-label fw-bold"></label>
                        <input asp-for="Salario" id="Salario" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Salario" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Direccion" class="control-label"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="FechaIngreso" class="control-label"></label>
                        <input asp-for="FechaIngreso" class="form-control" />
                        <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ContactoEmergencia" class="control-label"></label>
                        <input asp-for="ContactoEmergencia" class="form-control" />
                        <span asp-validation-for="ContactoEmergencia" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Estado" class="control-label"></label>
                        <input asp-for="Estado" class="form-control" />
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <!-- Foto actual -->
                    <div class="col-md-6 d-flex align-items-start justify-content-around">
                        <!-- Foto actual -->
                        <div class="text-center me-3">
                            <label class="form-label fw-bold">Fotografía actual</label><br />
                            @if (!string.IsNullOrEmpty(Model.FotoRuta))
                            {
                                <img src="@Model.FotoRuta"
                                     alt="Foto actual"
                                     class="rounded shadow-sm border foto-empleado"
                                     width="120" height="120" />
                            }
                            else
                            {
                                <img src="/img/Empleados/default-user.png"
                                     alt="Sin foto"
                                     class="rounded shadow-sm border foto-empleado"
                                     width="120" height="120" />
                                <div class="text-muted mt-1">Sin fotografía</div>
                            }
                        </div>

                        <!-- Subir nueva foto -->
                        <div class="text-start">
                            <label for="Foto" class="form-label fw-bold">Subir nueva fotografía</label>
						    @*<input type="file" name="Foto" id="Foto" class="form-control" accept="image/*" />*@
                            <input asp-for="FotoArchivo" class="form-control" accept="image/*" />
                            <div class="form-text mt-1">Formatos permitidos: JPG, PNG</div>
                        </div>
                    </div>

                </div>
 
                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Guardar cambios
                    </button>
                    <a href="/Empleados/Listar" class="btn btn-outline-secondary ms-2 px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        const fechaIngreso = document.getElementById("FechaIngreso");
        const hoy = new Date().toISOString().split("T")[0];
        fechaIngreso.min = hoy;

        const salarioInput = document.getElementById("Salario");
        const cargoSelect = document.getElementById("Cargo");

        cargoSelect.addEventListener("change", function () {
            let salario = 0;
            switch (this.value) {
                case "Piloto": salario = 15000; break;
                case "Copiloto": salario = 12000; break;
                case "Azafata": salario = 8000; break;
                case "Mecánico": salario = 9000; break;
                case "Administrador": salario = 7000; break;
                case "Despachador de vuelo": salario = 8500; break;
                case "Controlador aéreo": salario = 11000; break;
                case "Ingeniero de mantenimiento": salario = 10000; break;
                case "Supervisor de vuelo": salario = 9500; break;
                case "Operador de rampa": salario = 6000; break;
                case "Personal de limpieza": salario = 4500; break;
                case "Agente de servicio al cliente": salario = 5000; break;
                case "Encargado de logística": salario = 7000; break;
                case "Analista de operaciones": salario = 9000; break;
                default: salario = 0; break;
            }
            salarioInput.value = salario;
        });
    </script>

}
