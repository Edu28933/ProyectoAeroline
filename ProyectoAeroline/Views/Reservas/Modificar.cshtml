@model ProyectoAeroline.Models.ReservasModel

@{
    ViewData["Title"] = "Modificar Reserva";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-primary text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Modificar reserva</h4>
        <a href="/Reservas/Listar" class="btn btn-light btn-sm fw-bold">
            <i class="bi bi-arrow-left-circle"></i> Regresar
        </a>
    </div>

    <div class="card-body p-4">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <div class="card-body bg-light rounded-bottom-4">
            <form asp-action="Modificar" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdReserva" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdReserva" class="control-label">ID Reserva</label>
                        <input asp-for="IdReserva" class="form-control" readonly />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdPasajero" class="form-label fw-bold">Pasajero</label>
                        <select asp-for="IdPasajero" class="form-select" required>
                            <option value="">Seleccione un pasajero</option>
                            @foreach (var pasajero in ViewBag.Pasajeros as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@pasajero.Value" selected="@(pasajero.Value == Model.IdPasajero.ToString())">@pasajero.Text</option>
                            }
                        </select>
                        <span asp-validation-for="IdPasajero" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="IdVuelo" class="form-label fw-bold">Vuelo</label>
                        <select asp-for="IdVuelo" class="form-select" required>
                            <option value="">Seleccione un vuelo</option>
                            @foreach (var vuelo in ViewBag.Vuelos as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@vuelo.Value" selected="@(vuelo.Value == Model.IdVuelo.ToString())">@vuelo.Text</option>
                            }
                        </select>
                        <span asp-validation-for="IdVuelo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FechaReserva" class="form-label fw-bold">Fecha de Reserva</label>
                        <input asp-for="FechaReserva" class="form-control" type="date" value="@Model.FechaReserva.ToString("yyyy-MM-dd")" required />
                        <span asp-validation-for="FechaReserva" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="MontoAnticipo" class="form-label fw-bold">Monto Anticipo</label>
                        <input asp-for="MontoAnticipo" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="MontoAnticipo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FechaVuelo" class="form-label fw-bold">Fecha de Vuelo</label>
                        <input asp-for="FechaVuelo" class="form-control" type="date" value="@(Model.FechaVuelo?.ToString("yyyy-MM-dd"))" />
                        <span asp-validation-for="FechaVuelo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label fw-bold">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            @foreach (var estado in ViewBag.Estados as List<Microsoft.AspNetCore.Mvc.Rendering.SelectListItem>)
                            {
                                <option value="@estado.Value" selected="@(estado.Value == Model.Estado)">@estado.Text</option>
                            }
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Observaciones" class="form-label fw-bold">Observaciones</label>
                        <textarea asp-for="Observaciones" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Observaciones" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save"></i> Guardar cambios
                    </button>
                    <a href="/Reservas/Listar" class="btn btn-outline-secondary ms-2 px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

