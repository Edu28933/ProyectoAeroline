@model ProyectoAeroline.Models.ReservasModel

@{
    ViewData["Title"] = "Eliminar Reserva";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="bi bi-trash-fill"></i> Eliminar Reserva
            </h3>
            <a href="/Reservas/Listar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light">
            <h5 class="text-center mb-4 text-danger fw-semibold">
                Â¿Seguro que deseas eliminar esta reserva?
            </h5>

            <form asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdReserva" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label class="form-label">ID Reserva</label>
                        <input class="form-control" value="@Model.IdReserva" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">ID Pasajero</label>
                        <input class="form-control" value="@Model.IdPasajero" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">ID Vuelo</label>
                        <input class="form-control" value="@Model.IdVuelo" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha de Reserva</label>
                        <input class="form-control" value="@Model.FechaReserva.ToString("dd/MM/yyyy")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Monto Anticipo</label>
                        <input class="form-control" value="Q @(Model.MontoAnticipo?.ToString("N2") ?? "0.00")" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Fecha de Vuelo</label>
                        <input class="form-control" value="@(Model.FechaVuelo?.ToString("dd/MM/yyyy") ?? "N/A")" readonly />
                    </div>
                    <div class="col-md-12">
                        <label class="form-label">Observaciones</label>
                        <textarea class="form-control" readonly>@Model.Observaciones</textarea>
                    </div>
                    <div class="col-md-6">
                        <label class="form-label">Estado</label>
                        <input class="form-control" value="@Model.Estado" readonly />
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger px-4 me-2">
                        <i class="bi bi-trash3-fill"></i> Eliminar definitivamente
                    </button>
                    <a href="/Reservas/Listar" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

