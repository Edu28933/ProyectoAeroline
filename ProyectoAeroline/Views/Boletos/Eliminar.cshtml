@model ProyectoAeroline.Models.BoletosModel

@{
    ViewData["Title"] = "Eliminar Boleto";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                <i class="bi bi-ticket-x-fill"></i> Eliminar Boleto
            </h3>
            <a href="/Boletos/Listar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light">
            <h5 class="text-center mb-4 text-danger fw-semibold">
                ¿Seguro que deseas eliminar este boleto?
            </h5>
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3 text-center fw-semibold"></div>

            <form asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()

                <!-- Campo oculto -->
                <input type="hidden" asp-for="IdBoleto" />

                <div class="mb-3">
                    <label asp-for="IdBoleto" class="form-label"></label>
                    <input asp-for="IdBoleto" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="IdVuelo" class="form-label"></label>
                    <input asp-for="IdVuelo" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="IdPasajero" class="form-label"></label>
                    <input asp-for="IdPasajero" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="NumeroAsiento" class="form-label"></label>
                    <input asp-for="NumeroAsiento" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Clase" class="form-label"></label>
                    <input asp-for="Clase" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Precio" class="form-label"></label>
                    <input asp-for="Precio" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Cantidad" class="form-label"></label>
                    <input asp-for="Cantidad" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Descuento" class="form-label"></label>
                    <input asp-for="Descuento" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Impuesto" class="form-label"></label>
                    <input asp-for="Impuesto" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Total" class="form-label"></label>
                    <input asp-for="Total" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Reembolso" class="form-label"></label>
                    <input asp-for="Reembolso" class="form-control" readonly />
                </div>

                <div class="mb-3">
                    <label asp-for="Estado" class="form-label"></label>
                    <input asp-for="Estado" class="form-control" readonly />
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-danger px-4 me-2">
                        <i class="bi bi-trash3-fill"></i> Eliminar definitivamente
                    </button>
                    <a href="/Boletos/Listar" class="btn btn-outline-secondary px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
