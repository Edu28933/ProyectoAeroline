@model IEnumerable<ProyectoAeroline.Models.BoletosModel>

@{
    ViewData["Title"] = "Listar Boletos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-ticket-perforated"></i> Lista de Boletos</h3>
            <a href="/Boletos/Guardar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-plus-circle"></i> Agregar
            </a>
        </div>

        <div class="card-body bg-light">
            <table id="tablaBoletos" class="table table-hover align-middle text-center w-100">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Vuelo</th>
                        <th>Pasajero</th>
                        <th>Número de Asiento</th>
                        <th>Clase</th>
                        <th>Precio</th>
                        <th>Cantidad</th>
                        <th>Descuento</th>
                        <th>Impuesto</th>
                        <th>Total</th>
                        <th>Reembolso</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdBoleto</td>
                            <td>@item.IdVuelo</td>
                            <td>@item.IdPasajero</td>
                            <td>@item.NumeroAsiento</td>
                            <td>@item.Clase</td>
                            <td>Q @item.Precio.ToString("N2")</td>
                            <td>@item.Cantidad</td>
                            <td>Q @item.Descuento?.ToString("N2")</td>
                            <td>Q @item.Impuesto?.ToString("N2")</td>
                            <td><strong>Q @item.Total.ToString("N2")</strong></td>
                            <td>@item.Reembolso</td>
                            <td>
                                <span class="badge @(item.Estado == "Activo" ? "bg-success" : item.Estado == "Pendiente" ? "bg-warning text-dark" : "bg-danger")">
                                    @item.Estado
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Modificar", "Boletos", new { CodigoBoleto = item.IdBoleto })"
                                       class="btn btn-outline-secondary btn-sm" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="@Url.Action("Eliminar", "Boletos", new { CodigoBoleto = item.IdBoleto })"
                                       class="btn btn-outline-danger btn-sm"
                                       onclick="return confirm('¿Seguro que deseas eliminar este boleto?');"
                                       title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaBoletos').DataTable({
                language: { url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' },
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                responsive: true,
                ordering: true,
                columnDefs: [
                    { orderable: false, targets: [12] } // columna de Acciones no ordenable
                ]
            });
        });
    </script>
}
