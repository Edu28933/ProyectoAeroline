@model ProyectoAeroline.Models.VuelosModel

@{
    ViewData["Title"] = "Modificar Vuelo";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-gradient text-white py-3">
            <h4 class="mb-0"><i class="fas fa-plane-departure me-2"></i>Modificar Vuelo</h4>
        </div>
        <div class="card-body">
            <form asp-action="Modificar" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- ID oculto -->
                <input type="hidden" asp-for="IdVuelo" />

                <!-- Aerolínea -->
                <div class="form-group mb-3">
                    <label asp-for="Aerolinea" class="form-label fw-bold"></label>
                    <input asp-for="Aerolinea" class="form-control" maxlength="50" required />
                    <span asp-validation-for="Aerolinea" class="text-danger"></span>
                </div>

                <!-- Número de vuelo -->
                <div class="form-group mb-3">
                    <label asp-for="NumeroVuelo" class="form-label fw-bold"></label>
                    <input asp-for="NumeroVuelo" class="form-control" maxlength="10" required />
                    <span asp-validation-for="NumeroVuelo" class="text-danger"></span>
                </div>

                <!-- Código Avión -->
                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Código del Avión</label>
                    <select asp-for="IdAvion" class="form-select" asp-items="ViewBag.Aviones" required>
                        <option value="">-- Selecciona un avión --</option>
                    </select>
                    <span asp-validation-for="IdAvion" class="text-danger"></span>
                </div>

                <!-- Aeropuerto Origen -->
                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Aeropuerto Origen</label>
                    <select asp-for="AeropuertoOrigen" class="form-select" asp-items="ViewBag.Aeropuertos" id="origen" required>
                        <option value="">-- Selecciona aeropuerto origen --</option>
                    </select>
                    <span asp-validation-for="AeropuertoOrigen" class="text-danger"></span>
                </div>

                <!-- Código IATA Origen -->
                <div class="form-group mb-3">
                    <label asp-for="CodigoIATAOrigen" class="form-label fw-bold"></label>
                    <input asp-for="CodigoIATAOrigen" class="form-control" maxlength="3" required />
                    <span asp-validation-for="CodigoIATAOrigen" class="text-danger"></span>
                </div>

                <!-- Aeropuerto Destino -->
                <div class="form-group mb-3">
                    <label class="form-label fw-bold">Aeropuerto Destino</label>
                    <select asp-for="AeropuertoDestino" class="form-select" asp-items="ViewBag.Aeropuertos" id="destino" required>
                        <option value="">-- Selecciona aeropuerto destino --</option>
                    </select>
                    <span asp-validation-for="AeropuertoDestino" class="text-danger"></span>
                </div>

                <!-- Código IATA Destino -->
                <div class="form-group mb-3">
                    <label asp-for="CodigoIATADestino" class="form-label fw-bold"></label>
                    <input asp-for="CodigoIATADestino" class="form-control" maxlength="3" required />
                    <span asp-validation-for="CodigoIATADestino" class="text-danger"></span>
                </div>

                <!-- Clase -->
                <div class="form-group mb-3">
                    <label asp-for="Clase" class="form-label fw-bold"></label>
                    <select asp-for="Clase" class="form-select" required>
                        <option value="">-- Selecciona clase --</option>
                        <option value="Económica">Económica</option>
                        <option value="Ejecutiva">Ejecutiva</option>
                        <option value="Primera">Primera Clase</option>
                    </select>
                    <span asp-validation-for="Clase" class="text-danger"></span>
                </div>

                <!-- Fecha y hora salida -->
                <div class="form-group mb-3">
                    <label asp-for="FechaHoraSalida" class="form-label fw-bold"></label>
                    <input asp-for="FechaHoraSalida" type="datetime-local" class="form-control"
                           value="@(((DateTime)Model.FechaHoraSalida).ToString("yyyy-MM-ddTHH:mm"))" id="fechaSalida" required />
                    <span asp-validation-for="FechaHoraSalida" class="text-danger"></span>
                </div>

                <!-- Fecha y hora llegada -->
                <div class="form-group mb-3">
                    <label asp-for="FechaHoraLlegada" class="form-label fw-bold"></label>
                    <input asp-for="FechaHoraLlegada" type="datetime-local" class="form-control"
                           value="@(((DateTime)Model.FechaHoraLlegada).ToString("yyyy-MM-ddTHH:mm"))" required />
                    <span asp-validation-for="FechaHoraLlegada" class="text-danger"></span>
                </div>

                <!-- Asientos disponibles -->
                <div class="form-group mb-3">
                    <label asp-for="AsientosDisponibles" class="form-label fw-bold"></label>
                    <input asp-for="AsientosDisponibles" type="number" class="form-control" min="0" required />
                    <span asp-validation-for="AsientosDisponibles" class="text-danger"></span>
                </div>

                <!-- Precio -->
                <div class="form-group mb-3">
                    <label asp-for="Precio" class="form-label fw-bold"></label>
                    <input asp-for="Precio" type="number" step="0.01" class="form-control" id="precio" readonly />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>

                <!-- Moneda -->
                <div class="form-group mb-3">
                    <label asp-for="Moneda" class="form-label fw-bold"></label>
                    <input asp-for="Moneda" class="form-control" maxlength="3" required />
                    <span asp-validation-for="Moneda" class="text-danger"></span>
                </div>

                <!-- Estado -->
                <div class="form-group mb-3">
                    <label asp-for="Estado" class="form-label fw-bold"></label>
                    <select asp-for="Estado" class="form-select" asp-items="ViewBag.Estados" required>
                        <option value="">-- Selecciona estado --</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <!-- Botones -->
                <div class="form-group text-end">
                    <button type="submit" class="btn btn-success px-4">💾 Guardar Cambios</button>
                    <a asp-action="Listar" class="btn btn-secondary px-4 ms-2">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script>
        // === Establecer fecha mínima ===
        const ahora = new Date();
        const isoLocal = new Date(ahora.getTime() - ahora.getTimezoneOffset() * 60000)
            .toISOString().slice(0, 16);
        document.getElementById("fechaSalida").min = isoLocal;

        // === Calcular precio automáticamente ===
        const origen = document.getElementById('origen');
        const destino = document.getElementById('destino');
        origen.addEventListener('change', calcularPrecio);
        destino.addEventListener('change', calcularPrecio);

        function calcularPrecio() {
            const o = origen.value;
            const d = destino.value;

            if (o && d && o !== d) {
                fetch(`/api/vuelos/precio?origen=${o}&destino=${d}`)
                    .then(res => res.json())
                    .then(data => {
                        if (data && data.precio) {
                            document.getElementById('precio').value = data.precio.toFixed(2);
                        }
                    })
                    .catch(() => {
                        document.getElementById('precio').value = 0;
                    });
            } else {
                document.getElementById('precio').value = 0;
            }
        }
    </script>
}
