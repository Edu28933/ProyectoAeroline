@model ProyectoAeroline.Models.PantallasModel

@{
    ViewData["Title"] = "Modificar";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="card shadow-lg border-0 rounded-4 mt-4">
    <div class="card-header bg-primary text-white rounded-top-4 d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="bi bi-pencil-square"></i> Modificar pantalla</h4>
        <a href="/Pantallas/Listar" class="btn btn-light btn-sm fw-bold">
            <i class="bi bi-arrow-left-circle"></i> Regresar
        </a>
    </div>

    <div class="card-body p-4">
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger">@ViewBag.Error</div>
        }

        <div class="card-body bg-light rounded-bottom-4">
            <form asp-action="Modificar" method="post" class="needs-validation" novalidate>
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                
                <input type="hidden" asp-for="IdPantalla" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="IdPantalla" class="form-label fw-bold">ID Pantalla</label>
                        <input asp-for="IdPantalla" class="form-control" readonly />
                        <span asp-validation-for="IdPantalla" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="NombrePantalla" class="form-label fw-bold">Nombre de la Pantalla <span class="text-danger">*</span></label>
                        <input asp-for="NombrePantalla" class="form-control" placeholder="Nombre de la pantalla" required />
                        <span asp-validation-for="NombrePantalla" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Ruta" class="form-label fw-bold">Ruta</label>
                        <input asp-for="Ruta" class="form-control" placeholder="Ej: /Usuarios/Listar" />
                        <small class="form-text text-muted">Ruta donde se encuentra esta pantalla</small>
                        <span asp-validation-for="Ruta" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Icono" class="form-label fw-bold">Icono</label>
                        <input asp-for="Icono" class="form-control" placeholder="Ej: bi bi-people-fill" />
                        <small class="form-text text-muted">Clase de icono Bootstrap Icons</small>
                        <span asp-validation-for="Icono" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Descripcion" class="form-label fw-bold">Descripción</label>
                        <textarea asp-for="Descripcion" class="form-control" rows="3" placeholder="Descripción de la pantalla..."></textarea>
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Estado" class="form-label fw-bold">Estado</label>
                        <select asp-for="Estado" class="form-select">
                            <option value="Activo">Activo</option>
                            <option value="Inactivo">Inactivo</option>
                        </select>
                        <span asp-validation-for="Estado" class="text-danger"></span>
                    </div>
                </div>

                <div class="text-center mt-4">
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Guardar cambios
                    </button>
                    <a href="/Pantallas/Listar" class="btn btn-outline-secondary ms-2 px-4">
                        <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

