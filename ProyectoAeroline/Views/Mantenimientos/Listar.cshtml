@model IEnumerable<ProyectoAeroline.Models.MantenimientosModel>

@{
    ViewData["Title"] = "Listar Mantenimientos";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-primary text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0"><i class="bi bi-tools"></i> Lista de Mantenimientos</h3>
            <a href="/Mantenimientos/Guardar" class="btn btn-light btn-sm fw-bold">
                <i class="bi bi-plus-circle"></i> Agregar
            </a>
        </div>

        <div class="card-body bg-light">
            <table id="tablaMantenimientos" class="table table-hover align-middle text-center w-100">
                <thead class="table-primary">
                    <tr>
                        <th>ID</th>
                        <th>Avión</th>
                        <th>Empleado</th>
                        <th>Fecha Ingreso</th>
                        <th>Fecha Salida</th>
                        <th>Tipo</th>
                        <th>Costo</th>
                        <th>Costo Extra</th>
                        <th>Descripción</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IdMantenimiento</td>
                            <td>@item.IdAvion</td>
                            <td>@item.IdEmpleado</td>
                            <td>@item.FechaIngreso.ToString("dd/MM/yyyy")</td>
                            <td>@item.FechaSalida?.ToString("dd/MM/yyyy")</td>
                            <td>@item.Tipo</td>
                            <td>Q @item.Costo.ToString("N2")</td>
                            <td>Q @item.CostoExtra.ToString("N2")</td>
                            <td>@item.Descripcion</td>
                            <td>
                                <span class="badge @(item.Estado == "Activo" ? "bg-success" : item.Estado == "Pendiente" ? "bg-warning text-dark" : "bg-danger")">
                                    @item.Estado
                                </span>
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="@Url.Action("Modificar", "Mantenimientos", new { CodigoMantenimiento = item.IdMantenimiento })"
                                       class="btn btn-outline-secondary btn-sm" title="Editar">
                                        <i class="bi bi-pencil-square"></i>
                                    </a>
                                    <a href="@Url.Action("Eliminar", "Mantenimientos", new { CodigoMantenimiento = item.IdMantenimiento })"
                                       class="btn btn-outline-danger btn-sm"
                                       onclick="return confirm('¿Seguro que deseas eliminar este mantenimiento?');"
                                       title="Eliminar">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#tablaMantenimientos').DataTable({
                language: { url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/es-ES.json' },
                pageLength: 10,
                lengthMenu: [5, 10, 25, 50],
                responsive: true,
                ordering: true,
                columnDefs: [
                    { orderable: false, targets: [10] } // columna de Acciones no ordenable
                ]
            });
        });
    </script>
}
