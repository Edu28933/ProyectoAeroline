@model ProyectoAeroline.Models.MantenimientosModel

@{
    ViewData["Title"] = "Eliminar Mantenimiento";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Eliminar</h2>
<h5>¿Seguro que deseas eliminar este mantenimiento?</h5>
<hr />

<form asp-action="Eliminar" method="post">
    @Html.AntiForgeryToken()

    <!-- Campo oculto -->
    <input type="hidden" asp-for="IdMantenimiento" />

    <div class="mb-3">
        <label class="form-label">IdMantenimiento</label>
        <input class="form-control" value="@Model.IdMantenimiento" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">IdAvion</label>
        <input class="form-control" value="@Model.IdAvion" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">IdEmpleado</label>
        <input class="form-control" value="@Model.IdEmpleado" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Fecha Ingreso</label>
        <input class="form-control" value="@Model.FechaIngreso" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Fecha Salida</label>
        <input class="form-control" value="@Model.FechaSalida" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Tipo</label>
        <input class="form-control" value="@Model.Tipo" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Costo</label>
        <input class="form-control" value="@Model.Costo" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Costo Extra</label>
        <input class="form-control" value="@Model.CostoExtra" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Descripción</label>
        <input class="form-control" value="@Model.Descripcion" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Estado</label>
        <input class="form-control" value="@Model.Estado" readonly />
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a href="/Mantenimientos/Listar" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
