@model ProyectoAeroline.Models.EscalasModel

@{
    ViewData["Title"] = "Eliminar Escala";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid px-4 mt-4 animate__animated animate__fadeInUp">
    <div class="card shadow-lg border-0 rounded-4">
        <div class="card-header bg-danger text-white py-3 rounded-top-4 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                üóëÔ∏è <i class="bi bi-trash"></i> <strong>Eliminar Escala</strong>
            </h3>
            <a asp-action="Listar" class="btn btn-light btn-sm fw-bold">
                ‚¨ÖÔ∏è <i class="bi bi-arrow-left-circle"></i> Regresar
            </a>
        </div>

        <div class="card-body bg-light">
            @if (Model.Estado == "Activo")
            {
                <div class="alert alert-danger" role="alert">
                    <h5 class="alert-heading">‚ùå No se puede eliminar esta escala</h5>
                    <p class="mb-0">
                        <strong>La escala tiene estado "Activo" y no puede ser eliminada.</strong><br>
                        Por favor, cambie el estado a "Inactivo" antes de intentar eliminar.
                    </p>
                </div>
            }
            else
            {
                <div class="alert alert-warning" role="alert">
                    <h5 class="alert-heading">‚ö†Ô∏è ¬øEst√°s seguro de eliminar esta escala?</h5>
                    <p class="mb-0">Esta acci√≥n no se puede deshacer. La escala ser√° eliminada permanentemente.</p>
                </div>
            }

            <form id="formEliminarEscala" asp-action="Eliminar" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="IdEscala" id="IdEscalaHidden" />
                
                <div class="row g-3">
                    <!-- Informaci√≥n de la escala -->
                    <div class="col-md-12">
                        <div class="card bg-light border">
                            <div class="card-body">
                                <h5 class="card-title text-primary">üìã Informaci√≥n de la Escala</h5>
                                <hr />
                                
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <strong>üÜî ID Escala:</strong>
                                        <p class="text-muted">@Model.IdEscala</p>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <strong>‚úàÔ∏è Vuelo:</strong>
                                        <p class="text-muted">@(Model.DescripcionVuelo ?? $"ID: {Model.IdVuelo}")</p>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <strong>üõ´ Aeropuerto:</strong>
                                        <p class="text-muted">@(Model.DescripcionAeropuerto ?? $"ID: {Model.IdAeropuerto}")</p>
                                    </div>
                                    
                                    <div class="col-md-4 mb-3">
                                        <strong>üïê Hora Llegada:</strong>
                                        <p class="text-muted">@Model.HoraLlegada.ToString(@"hh\:mm")</p>
                                    </div>
                                    
                                    <div class="col-md-4 mb-3">
                                        <strong>üïê Hora Salida:</strong>
                                        <p class="text-muted">@Model.HoraSalida.ToString(@"hh\:mm")</p>
                                    </div>
                                    
                                    <div class="col-md-4 mb-3">
                                        <strong>‚è±Ô∏è Tiempo Espera:</strong>
                                        <p class="text-muted">@(Model.TiempoEspera?.ToString(@"hh\:mm") ?? "N/A")</p>
                                    </div>
                                    
                                    <div class="col-md-6 mb-3">
                                        <strong>‚öôÔ∏è Estado:</strong>
                                        <span class="badge @(Model.Estado == "Activo" ? "bg-success" : "bg-danger") px-3 py-2 rounded-pill">
                                            @Model.Estado
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-group text-end mt-4">
                    @if (Model.Estado == "Activo")
                    {
                        <button type="button" class="btn btn-danger px-4 fancy-btn" disabled title="No se puede eliminar una escala con estado Activo">
                            üóëÔ∏è <i class="bi bi-trash"></i> Confirmar Eliminaci√≥n (Deshabilitado)
                        </button>
                    }
                    else
                    {
                        <button type="button" class="btn btn-danger px-4 fancy-btn" onclick="confirmarEliminacion()">
                            üóëÔ∏è <i class="bi bi-trash"></i> Confirmar Eliminaci√≥n
                        </button>
                    }
                    <a asp-action="Listar" class="btn btn-secondary px-4 fancy-btn ms-2">
                        ‚ùå <i class="bi bi-x-circle"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function confirmarEliminacion() {
            const idEscalaEl = document.getElementById('IdEscalaHidden');
            if (!idEscalaEl) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'No se encontr√≥ el ID de la escala.',
                    confirmButtonColor: '#dc3545'
                });
                return;
            }

            const idEscala = idEscalaEl.value;
            
            if (!idEscala || idEscala <= 0 || idEscala === '') {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'ID de escala inv√°lido: ' + idEscala,
                    confirmButtonColor: '#dc3545'
                });
                return;
            }

            // Validar estado en el cliente tambi√©n
            const estado = '@Model.Estado';
            if (estado === 'Activo') {
                Swal.fire({
                    icon: 'error',
                    title: 'No se puede eliminar',
                    html: '‚ùå <strong>La escala tiene estado "Activo"</strong><br><br>Por favor, cambie el estado a "Inactivo" antes de intentar eliminar.',
                    confirmButtonColor: '#dc3545',
                    confirmButtonText: 'Entendido'
                });
                return;
            }

            Swal.fire({
                title: '¬øEliminar Escala?',
                html: '‚ö†Ô∏è ¬øEst√°s seguro de eliminar esta escala?<br><br>Esta acci√≥n no se puede deshacer.',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'S√≠, eliminar',
                cancelButtonText: 'Cancelar',
                backdrop: 'rgba(0,0,0,0.4)'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Asegurar que el formulario se env√≠e correctamente
                    const form = document.getElementById('formEliminarEscala');
                    if (form) {
                        form.submit();
                    } else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Error',
                            text: 'No se encontr√≥ el formulario.',
                            confirmButtonColor: '#dc3545'
                        });
                    }
                }
            });
        }
    </script>

    <style>
        .fancy-btn {
            border-radius: 25px;
            font-weight: bold;
            transition: all 0.3s ease-in-out;
        }

            .fancy-btn:hover {
                transform: scale(1.1);
                box-shadow: 0 0 20px rgba(220, 53, 69, 0.6);
            }

        .card {
            transition: 0.4s ease;
        }

            .card:hover {
                transform: scale(1.02);
                box-shadow: 0 0 25px rgba(220, 53, 69, 0.3);
            }
    </style>
}

