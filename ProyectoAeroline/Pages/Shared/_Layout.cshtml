@* Pages/Shared/_Layout.cshtml *@
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ProyectoAeroline</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Bootstrap Icons (CDN) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">

    <!-- Estilos -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebars.css" asp-append-version="true" />
</head>
<body class="sb-has-sidebar body-watermark">
    <!-- Navbar superior -->
    <header class="navbar navbar-dark bg-dark sticky-top shadow-sm">
        <div class="container-fluid">
            <button id="btnToggleSidebar" class="btn btn-outline-light me-2" type="button" title="Contraer/expandir">
                <i class="bi bi-layout-sidebar-inset"></i>
            </button>
            <a class="navbar-brand" asp-page="/Index">ProyectoAeroline</a>
            <div class="d-flex align-items-center gap-2">
                @* espacio para acciones *@
            </div>
        </div>
    </header>

    <!-- Layout con sidebar + contenido -->
    <div class="d-flex">
        @await Html.PartialAsync("_Sidebar")  @* Sidebar en todas las páginas *@

        <!-- Contenido principal -->
        <main id="sb-container" class="sb-content flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <!-- Scripts -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebars.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

    <!-- Activo en sidebar -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
          const links = document.querySelectorAll('.sb-link');
          function setActive(el){ links.forEach(l => l.classList.remove('active')); el.classList.add('active'); }
          const savedHref = localStorage.getItem('sb-active');
          let initial = Array.from(links).find(a => a.pathname === location.pathname);
          if (!initial && savedHref) initial = Array.from(links).find(a => a.getAttribute('href') === savedHref);
          if (initial) setActive(initial);
          links.forEach(a => a.addEventListener('click', function(){
            setActive(this);
            localStorage.setItem('sb-active', this.getAttribute('href'));
          }));
        });
    </script>


    @* Pegar en Pages/Shared/_Layout.cshtml, antes de </body> *@
    @if (User?.Identity?.IsAuthenticated ?? false)
    {
        <script>
            (() => {
              const LOGOUT_URL = "/Account/Logout";

              // 1) Inyecta estados en el historial para que "Atrás" dispare popstate sin salirte aún de la página
              try {
                history.replaceState({ guard: true }, document.title, location.href);
                history.pushState({ guard: true }, document.title, location.href);
              } catch {}

              // 2) Al presionar Atrás: cerrar sesión y llevar a Login
              let loggingOut = false;
              window.addEventListener("popstate", () => {
                if (loggingOut) return;
                loggingOut = true;

                // Cierra sesión en el servidor
                fetch(LOGOUT_URL, { method: "GET", credentials: "include", cache: "no-store" })
                  .catch(() => { /* no-op */ })
                  .finally(() => {
                    // Redirige al Login y evita dejar rastro en el historial
                    location.replace("/Account/Login");
                  });
              }, { passive: true });

              // 3) Si el navegador intenta “revivir” la página protegida desde el Back/Forward cache, forzar reload
              window.addEventListener("pageshow", (e) => {
                if (e.persisted) location.reload();
              });
            })();
        </script>
    }


</body>
</html>
